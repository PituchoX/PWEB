@page "/minhas-vendas"
@inject ApiService Api
@inject NavigationManager Nav

<div class="container py-4">
    <h4 class="mb-3">
        <i class="bi bi-graph-up me-2"></i>Historico de Vendas
    </h4>

    @if (Api.GetUserInfo()?.Perfil != "Fornecedor")
    {
        <div class="alert alert-warning small">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Esta pagina e apenas para fornecedores.
        </div>
    }
    else if (!Api.IsAuthenticated)
    {
        <div class="alert alert-warning small">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Precisa de <a href="/login?returnUrl=/minhas-vendas">entrar</a>.
        </div>
    }
    else if (vendas == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (!vendas.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-graph-down display-4 text-muted"></i>
            <p class="mt-3 text-muted">Ainda nao tem vendas</p>
            <a href="/meus-produtos" class="btn btn-primary btn-sm">
                <i class="bi bi-box me-1"></i>Ver Produtos
            </a>
        </div>
    }
    else
    {
        <!-- Resumo -->
        <div class="row mb-3">
            <div class="col-4">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center p-2">
                        <h5 class="mb-0">@vendas.Count</h5>
                        <small>Vendas</small>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center p-2">
                        <h5 class="mb-0">@vendas.Sum(v => v.Quantidade)</h5>
                        <small>Unidades</small>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center p-2">
                        <h6 class="mb-0">@vendas.Sum(v => v.Total).ToString("C2")</h6>
                        <small>Total</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de vendas -->
        @foreach (var venda in vendas)
        {
            <div class="card mb-2">
                <div class="card-body p-2">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <strong class="small">#@venda.VendaId</strong>
                            <span class="badge @GetEstadoBadgeClass(venda.Estado) ms-1">@venda.Estado</span>
                            <br />
                            <small class="text-muted">@venda.Data</small>
                        </div>
                        <div class="text-end">
                            <strong class="text-primary">@venda.Total.ToString("C2")</strong>
                        </div>
                    </div>
                    <hr class="my-1" />
                    <div class="small">
                        <span class="badge bg-secondary me-1">@venda.Quantidade x</span>
                        @venda.ProdutoNome
                    </div>
                    <div class="small text-muted">
                        <i class="bi bi-person me-1"></i>@venda.ClienteNome
                    </div>
                </div>
            </div>
        }

        <!-- Total -->
        <div class="card bg-light">
            <div class="card-body p-2 d-flex justify-content-between">
                <strong>Total Geral:</strong>
                <strong class="text-primary">@vendas.Sum(v => v.Total).ToString("C2")</strong>
            </div>
        </div>
    }
</div>

@code {
    private List<VendaFornecedorDto>? vendas;

    protected override async Task OnInitializedAsync()
    {
        if (Api.IsAuthenticated && Api.GetUserInfo()?.Perfil == "Fornecedor")
        {
            vendas = await Api.GetMinhasVendasFornecedorAsync();
        }
    }

    private string GetEstadoBadgeClass(string? estado) => estado switch
    {
        "Pendente" => "bg-warning text-dark",
        "Confirmada" => "bg-success",
        "Expedida" => "bg-info",
        "Entregue" => "bg-primary",
        "Rejeitada" => "bg-danger",
        "Cancelada" => "bg-secondary",
        _ => "bg-secondary"
    };
}

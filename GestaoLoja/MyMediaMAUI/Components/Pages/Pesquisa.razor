@page "/produtos"
@inject ApiService Api
@inject CarrinhoService CarrinhoService
@inject NavigationManager Nav

<div class="container py-4">
    <!-- Cabecalho da pesquisa -->
    <div class="mb-3">
        <h4>
            <i class="bi bi-search me-2"></i>
            @if (!string.IsNullOrEmpty(termoPesquisa))
            {
                <span>Resultados para "@termoPesquisa"</span>
            }
            else
            {
                <span>Pesquisar</span>
            }
        </h4>
    </div>

    <!-- Barra de pesquisa -->
    <div class="card mb-3">
        <div class="card-body p-2">
            <div class="input-group">
                <input type="text" class="form-control" 
                       placeholder="O que procura?" 
                       @bind="termoPesquisa" 
                       @bind:event="oninput"
                       @onkeypress="OnKeyPress" />
                <button class="btn btn-warning" @onclick="Pesquisar">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    @if (carregando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-2 text-muted small">A pesquisar...</p>
        </div>
    }
    else if (produtos == null || !produtos.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-inbox display-4 text-muted"></i>
            <p class="mt-3 text-muted">
                @if (!string.IsNullOrEmpty(termoPesquisa))
                {
                    <span>Nenhum produto encontrado</span>
                }
                else
                {
                    <span>Introduza um termo de pesquisa</span>
                }
            </p>
            <a href="/" class="btn btn-primary btn-sm">
                <i class="bi bi-house me-1"></i>Voltar
            </a>
        </div>
    }
    else
    {
        <p class="text-muted small mb-2">
            <i class="bi bi-check-circle me-1"></i>
            @produtos.Count produto(s) encontrado(s)
        </p>

        <div class="produtos-grid">
            @foreach (var prod in produtos)
            {
                <div class="produto-card">
                    <img src="@GetImageUrl(prod.Imagem)"
                         alt="@prod.Nome"
                         onerror="this.src='img/noproductstrans.png'"
                         @onclick="() => VerProduto(prod.Id)" />
                    <div class="info">
                        <div class="nome" title="@prod.Nome">@prod.Nome</div>
                        <div class="categoria">@prod.CategoriaNome</div>
                        <div class="preco">@prod.PrecoFinal.ToString("C2")</div>
                    </div>
                    @if (prod.Stock > 0)
                    {
                        <button class="btn btn-adicionar" @onclick="() => AdicionarAoCarrinho(prod)">
                            <i class="bi bi-cart-plus me-1"></i> Adicionar
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-secondary w-100" disabled>Esgotado</button>
                    }
                </div>
            }
        </div>
    }
</div>

@code {
    [SupplyParameterFromQuery(Name = "search")]
    public string? SearchQuery { get; set; }

    private string termoPesquisa = "";
    private List<ProdutoDto>? produtos;
    private bool carregando = false;
    private string ApiBaseUrl => MauiProgram.ApiBaseUrl;

    protected override async Task OnInitializedAsync()
    {
        if (!string.IsNullOrEmpty(SearchQuery))
        {
            termoPesquisa = SearchQuery;
            await Pesquisar();
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(SearchQuery) && SearchQuery != termoPesquisa)
        {
            termoPesquisa = SearchQuery;
            await Pesquisar();
        }
    }

    private string GetImageUrl(string? imagem)
    {
        if (string.IsNullOrEmpty(imagem))
            return "img/noproductstrans.png";
        return $"{ApiBaseUrl}img/{imagem}";
    }

    private async Task Pesquisar()
    {
        if (string.IsNullOrWhiteSpace(termoPesquisa))
        {
            produtos = null;
            return;
        }

        carregando = true;
        produtos = await Api.PesquisarProdutosAsync(termoPesquisa);
        carregando = false;
    }

    private async Task OnKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await Pesquisar();
        }
    }

    private void VerProduto(int id)
    {
        Nav.NavigateTo($"/produto/{id}");
    }

    private void AdicionarAoCarrinho(ProdutoDto produto)
    {
        CarrinhoService.AdicionarItem(produto);
    }
}

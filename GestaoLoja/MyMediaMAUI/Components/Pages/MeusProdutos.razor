@page "/meus-produtos"
@inject ApiService Api
@inject NavigationManager Nav

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h4>
            <i class="bi bi-box me-2"></i>Meus Produtos
        </h4>
        <button class="btn btn-primary btn-sm" @onclick="AbrirFormulario">
            <i class="bi bi-plus-circle me-1"></i>Novo
        </button>
    </div>

    @if (!Api.IsAuthenticated || Api.GetUserInfo()?.Perfil != "Fornecedor")
    {
        <div class="alert alert-warning small">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Esta pagina e apenas para fornecedores.
        </div>
    }
    else if (produtos == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else
    {
        @if (mostrarFormulario)
        {
            <div class="card mb-4">
                <div class="card-header py-2">
                    <h6 class="mb-0">@(produtoEditar != null ? "Editar Produto" : "Novo Produto")</h6>
                </div>
                <div class="card-body">
                    <EditForm Model="produtoForm" OnValidSubmit="GuardarProduto">
                        <DataAnnotationsValidator />
                        
                        <div class="mb-2">
                            <label class="form-label small">Nome</label>
                            <InputText @bind-Value="produtoForm.Nome" class="form-control form-control-sm" />
                        </div>

                        <div class="row">
                            <div class="col-6 mb-2">
                                <label class="form-label small">Preco Base</label>
                                <InputNumber @bind-Value="produtoForm.PrecoBase" class="form-control form-control-sm" />
                            </div>
                            <div class="col-6 mb-2">
                                <label class="form-label small">Stock</label>
                                <InputNumber @bind-Value="produtoForm.Stock" class="form-control form-control-sm" />
                            </div>
                        </div>

                        <div class="mb-2">
                            <label class="form-label small">Categoria</label>
                            <InputSelect @bind-Value="produtoForm.CategoriaId" class="form-select form-select-sm">
                                <option value="0">Selecione...</option>
                                @if (categorias != null)
                                {
                                    @foreach (var cat in categorias)
                                    {
                                        <option value="@cat.Id">@cat.Nome</option>
                                    }
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-2">
                            <label class="form-label small">Modo de Entrega</label>
                            <InputSelect @bind-Value="produtoForm.ModoEntregaId" class="form-select form-select-sm">
                                <option value="0">Selecione...</option>
                                @if (modosEntrega != null)
                                {
                                    @foreach (var modo in modosEntrega)
                                    {
                                        <option value="@modo.Id">@modo.Nome</option>
                                    }
                                }
                            </InputSelect>
                        </div>

                        <div class="mb-3">
                            <label class="form-label small">Imagem</label>
                            <InputText @bind-Value="produtoForm.Imagem" class="form-control form-control-sm" placeholder="nome_ficheiro.png" />
                        </div>

                        @if (!string.IsNullOrEmpty(mensagemErro))
                        {
                            <div class="alert alert-danger small py-1">@mensagemErro</div>
                        }

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success btn-sm" disabled="@processando">
                                @if (processando)
                                {
                                    <span class="spinner-border spinner-border-sm me-1"></span>
                                }
                                Guardar
                            </button>
                            <button type="button" class="btn btn-secondary btn-sm" @onclick="FecharFormulario">
                                Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        }

        @if (!produtos.Any())
        {
            <div class="alert alert-info small">
                <i class="bi bi-info-circle me-2"></i>
                Ainda nao tem produtos.
            </div>
        }
        else
        {
            @foreach (var prod in produtos)
            {
                <div class="card mb-2">
                    <div class="card-body p-2">
                        <div class="d-flex align-items-center">
                            <img src="@GetImageUrl(prod.Imagem)" alt="@prod.Nome" 
                                 style="width: 50px; height: 50px; object-fit: cover;"
                                 class="rounded me-2"
                                 onerror="this.src='img/noproductstrans.png'" />
                            <div class="flex-grow-1">
                                <strong class="small">@prod.Nome</strong>
                                <span class="badge @GetEstadoBadgeClass(prod.Estado) ms-1">@prod.Estado</span>
                                <br />
                                <small class="text-muted">@prod.CategoriaNome | Stock: @prod.Stock</small>
                            </div>
                            <div class="text-end">
                                <strong class="text-primary">@prod.PrecoFinal.ToString("C2")</strong>
                                <br />
                                <button class="btn btn-sm btn-warning me-1" @onclick="() => EditarProduto(prod)">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ApagarProduto(prod.Id)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    }
</div>

@code {
    private List<ProdutoDto>? produtos;
    private List<CategoriaDto>? categorias;
    private List<ModoEntregaDto>? modosEntrega;
    private ProdutoCreateDto produtoForm = new();
    private ProdutoDto? produtoEditar;
    private bool mostrarFormulario = false;
    private bool processando = false;
    private string? mensagemErro;
    private string ApiBaseUrl => MauiProgram.ApiBaseUrl;

    protected override async Task OnInitializedAsync()
    {
        if (Api.IsAuthenticated && Api.GetUserInfo()?.Perfil == "Fornecedor")
        {
            await CarregarDados();
        }
    }

    private async Task CarregarDados()
    {
        produtos = await Api.GetMeusProdutosAsync();
        categorias = await Api.GetCategoriasAsync();
        modosEntrega = await Api.GetModosEntregaAsync();
    }

    private string GetImageUrl(string? imagem)
    {
        if (string.IsNullOrEmpty(imagem))
            return "img/noproductstrans.png";
        return $"{ApiBaseUrl}img/{imagem}";
    }

    private void AbrirFormulario()
    {
        produtoEditar = null;
        produtoForm = new ProdutoCreateDto();
        mostrarFormulario = true;
    }

    private void FecharFormulario()
    {
        mostrarFormulario = false;
        mensagemErro = null;
    }

    private void EditarProduto(ProdutoDto produto)
    {
        produtoEditar = produto;
        produtoForm = new ProdutoCreateDto
        {
            Nome = produto.Nome,
            PrecoBase = produto.PrecoBase,
            Stock = produto.Stock,
            Imagem = produto.Imagem,
            CategoriaId = produto.CategoriaId,
            ModoEntregaId = produto.ModoEntregaId
        };
        mostrarFormulario = true;
    }

    private async Task GuardarProduto()
    {
        processando = true;
        mensagemErro = null;

        try
        {
            bool sucesso;
            if (produtoEditar != null)
            {
                var updateDto = new ProdutoUpdateDto
                {
                    Id = produtoEditar.Id,
                    Nome = produtoForm.Nome,
                    PrecoBase = produtoForm.PrecoBase,
                    Stock = produtoForm.Stock,
                    Imagem = produtoForm.Imagem,
                    CategoriaId = produtoForm.CategoriaId,
                    ModoEntregaId = produtoForm.ModoEntregaId
                };
                sucesso = await Api.AtualizarProdutoAsync(updateDto);
            }
            else
            {
                sucesso = await Api.CriarProdutoAsync(produtoForm);
            }

            if (sucesso)
            {
                await CarregarDados();
                FecharFormulario();
            }
            else
            {
                mensagemErro = "Erro ao guardar o produto";
            }
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }

    private async Task ApagarProduto(int id)
    {
        var sucesso = await Api.ApagarProdutoAsync(id);
        if (sucesso)
        {
            await CarregarDados();
        }
    }

    private string GetEstadoBadgeClass(string estado) => estado switch
    {
        "Ativo" => "bg-success",
        "Pendente" => "bg-warning text-dark",
        "Inativo" => "bg-secondary",
        _ => "bg-secondary"
    };
}

@page "/minhas-compras"
@inject ApiService Api
@inject NavigationManager Nav

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-bag me-2"></i>Minhas Compras
    </h2>

    @if (!Api.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Precisa de <a href="/login?returnUrl=/minhas-compras">entrar</a> para ver as suas compras.
        </div>
    }
    else if (vendas == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else if (!vendas.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Ainda nao tem compras</h4>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-cart me-2"></i>Comecar a comprar
            </a>
        </div>
    }
    else
    {
        @foreach (var venda in vendas)
        {
            <div class="card mb-3">
                <div class="card-header d-flex justify-content-between align-items-center py-2">
                    <div>
                        <i class="bi bi-receipt me-1"></i>
                        <strong>#@venda.Id</strong>
                        <small class="text-muted ms-2">@venda.Data</small>
                    </div>
                    <span class="badge @GetEstadoBadgeClass(venda.Estado)">@GetEstadoLabel(venda.Estado)</span>
                </div>
                <div class="card-body py-2">
                    @if (venda.Linhas != null && venda.Linhas.Any())
                    {
                        @foreach (var linha in venda.Linhas)
                        {
                            <div class="d-flex align-items-center border-bottom py-2">
                                <img src="img/@linha.ProdutoImagem"
                                     alt="@linha.ProdutoNome"
                                     style="width: 50px; height: 50px; object-fit: cover;"
                                     class="rounded me-2"
                                     onerror="this.src='img/noproductstrans.png'" />
                                <div class="flex-grow-1">
                                    <small class="fw-bold">@linha.ProdutoNome</small>
                                    <br />
                                    <small class="text-muted">@linha.Quantidade x @linha.PrecoUnitario.ToString("C2")</small>
                                </div>
                                <span class="fw-bold text-primary">@linha.Subtotal.ToString("C2")</span>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted small">Sem detalhes</p>
                    }
                </div>
                <div class="card-footer d-flex justify-content-between py-2">
                    <span class="small text-muted">
                        @if (venda.Linhas != null)
                        {
                            @venda.Linhas.Sum(l => l.Quantidade) <text>produto(s)</text>
                        }
                    </span>
                    <strong class="text-primary">@venda.Total.ToString("C2")</strong>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<VendaDto>? vendas;

    protected override async Task OnInitializedAsync()
    {
        if (Api.IsAuthenticated)
        {
            vendas = await Api.GetMinhasVendasAsync();
        }
    }

    private string GetEstadoBadgeClass(string estado) => estado switch
    {
        "Pendente" => "bg-warning text-dark",
        "Confirmada" => "bg-success",
        "Expedida" => "bg-info",
        "Entregue" => "bg-primary",
        "Rejeitada" => "bg-danger",
        "Cancelada" => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetEstadoLabel(string estado) => estado switch
    {
        "Pendente" => "Aguarda Confirmacao",
        "Confirmada" => "Confirmada",
        "Expedida" => "Expedida",
        "Entregue" => "Entregue",
        "Rejeitada" => "Rejeitada",
        "Cancelada" => "Cancelada",
        _ => estado
    };
}

@page "/minhas-compras"
@inject ApiService Api
@inject NavigationManager Nav

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-bag me-2"></i>Minhas Compras
    </h2>

    @if (!Api.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Precisa de <a href="/login?returnUrl=/minhas-compras">entrar</a> para ver as suas compras.
        </div>
    }
    else if (vendas == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else if (!vendas.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Ainda não tem compras</h4>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-cart me-2"></i>Começar a comprar
            </a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var venda in vendas)
            {
                <div class="col-md-6 mb-4">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span>
                                <i class="bi bi-receipt me-2"></i>Encomenda #@venda.Id
                            </span>
                            <span class="badge @GetEstadoBadgeClass(venda.Estado)">@venda.Estado</span>
                        </div>
                        <div class="card-body">
                            <p class="text-muted mb-2">
                                <i class="bi bi-calendar me-1"></i>@venda.Data
                            </p>
                            
                            <ul class="list-unstyled">
                                @foreach (var linha in venda.Linhas)
                                {
                                    <li class="mb-1">
                                        <span class="badge bg-secondary me-2">@linha.Quantidade x</span>
                                        @linha.ProdutoNome - @linha.Subtotal.ToString("C2")
                                    </li>
                                }
                            </ul>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <span>Total:</span>
                            <strong class="text-primary">@venda.Total.ToString("C2")</strong>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<VendaDto>? vendas;

    protected override async Task OnInitializedAsync()
    {
        if (Api.IsAuthenticated)
        {
            vendas = await Api.GetMinhasVendasAsync();
        }
    }

    private string GetEstadoBadgeClass(string estado) => estado switch
    {
        "Pendente" => "bg-warning",
        "Confirmada" => "bg-info",
        "Expedida" => "bg-success",
        "Rejeitada" => "bg-danger",
        _ => "bg-secondary"
    };
}

@inherits LayoutComponentBase
@implements IDisposable
@inject CarrinhoService Carrinho
@inject ApiService Api
@inject NavigationManager Nav

<!-- HEADER -->
<div class="header-top">
    <div class="container-fluid d-flex justify-content-between align-items-center py-2 px-2">
        <!-- Logo -->
        <a class="navbar-brand text-white fw-bold" href="/" style="font-size: 1rem; text-decoration: none;">
            <i class="bi bi-disc me-1"></i>MyMEDIA
        </a>

        <!-- Barra de pesquisa compacta -->
        <div class="flex-grow-1 mx-2">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Pesquisar..." 
                       @bind="termoPesquisa" @bind:event="oninput" @onkeypress="OnKeyPress" 
                       style="font-size: 0.8rem;" />
                <button class="btn btn-warning" type="button" @onclick="Pesquisar">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        <!-- Ações do utilizador -->
        <div class="user-actions d-flex align-items-center gap-1">
            @if (Api.IsAuthenticated)
            {
                <!-- Nome do utilizador com menu -->
                <div class="user-menu-container">
                    <button class="btn btn-user-toggle" @onclick="ToggleMenu">
                        <i class="bi bi-person-circle"></i>
                        <i class="bi @(mostrarMenu ? "bi-chevron-up" : "bi-chevron-down") ms-1" style="font-size: 0.6rem;"></i>
                    </button>
                    
                    @if (mostrarMenu)
                    {
                        <div class="user-dropdown">
                            <div class="dropdown-header">
                                <i class="bi bi-person-fill me-2"></i>@Api.GetUserInfo()?.NomeCompleto
                                <br/>
                                <small class="text-muted">@Api.GetUserInfo()?.Perfil</small>
                            </div>
                            <div class="dropdown-divider"></div>
                            @if (Api.GetUserInfo()?.Perfil == "Cliente")
                            {
                                <a class="dropdown-item" href="/minhas-compras" @onclick="FecharMenu">
                                    <i class="bi bi-bag me-2"></i>Minhas Compras
                                </a>
                            }
                            @if (Api.GetUserInfo()?.Perfil == "Fornecedor")
                            {
                                <a class="dropdown-item" href="/meus-produtos" @onclick="FecharMenu">
                                    <i class="bi bi-box me-2"></i>Meus Produtos
                                </a>
                                <a class="dropdown-item" href="/minhas-vendas" @onclick="FecharMenu">
                                    <i class="bi bi-graph-up me-2"></i>Minhas Vendas
                                </a>
                            }
                            <div class="dropdown-divider"></div>
                            <button class="dropdown-item text-danger" @onclick="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Sair
                            </button>
                        </div>
                    }
                </div>
            }
            else
            {
                <a href="/login" class="btn btn-outline-light btn-sm px-2">
                    <i class="bi bi-person"></i>
                </a>
                <a href="/registar" class="btn btn-warning btn-sm px-2">
                    <i class="bi bi-person-plus"></i>
                </a>
            }

            <!-- Carrinho -->
            <a href="/carrinho" class="btn btn-outline-light btn-sm position-relative px-2">
                <i class="bi bi-cart3"></i>
                @if (Carrinho.TotalItens > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.55rem;">
                        @Carrinho.TotalItens
                    </span>
                }
            </a>
        </div>
    </div>
</div>

<!-- Overlay para fechar menu ao clicar fora -->
@if (mostrarMenu)
{
    <div class="menu-overlay" @onclick="FecharMenu"></div>
}

<!-- CONTEÚDO PRINCIPAL -->
<div class="main-content">
    @Body
</div>

<!-- FOOTER -->
<footer class="footer-bottom py-2">
    <div class="container text-center">
        <small class="text-white-50">© 2025 MyMEDIA - ISEC</small>
    </div>
</footer>

@code {
    private bool mostrarMenu = false;
    private bool initialized = false;
    private string termoPesquisa = "";

    protected override async Task OnInitializedAsync()
    {
        Carrinho.OnChange += OnStateChanged;
        Api.OnAuthStateChanged += OnStateChanged;
        
        // Carregar sessão guardada (restaurar login após refresh)
        if (!initialized)
        {
            initialized = true;
            await Api.InitializeAsync();
        }
    }

    private void OnStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleMenu()
    {
        mostrarMenu = !mostrarMenu;
    }

    private void FecharMenu()
    {
        mostrarMenu = false;
    }

    private string GetShortName()
    {
        var nome = Api.GetUserInfo()?.NomeCompleto ?? "";
        if (string.IsNullOrEmpty(nome)) return "User";
        var partes = nome.Split(' ');
        return partes[0];
    }

    private void Pesquisar()
    {
        if (!string.IsNullOrWhiteSpace(termoPesquisa))
        {
            Nav.NavigateTo($"/produtos?search={Uri.EscapeDataString(termoPesquisa)}");
        }
    }

    private void OnKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Pesquisar();
        }
    }

    private void Logout()
    {
        mostrarMenu = false;
        Api.Logout();
        Carrinho.LimparCarrinho();
        Nav.NavigateTo("/");
    }

    public void Dispose()
    {
        Carrinho.OnChange -= OnStateChanged;
        Api.OnAuthStateChanged -= OnStateChanged;
    }
}

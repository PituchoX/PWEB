@inherits LayoutComponentBase
@implements IDisposable
@inject CarrinhoService Carrinho
@inject ApiService Api
@inject NavigationManager Nav

<!-- HEADER -->
<div class="header-top">
    <div class="container-fluid d-flex justify-content-between align-items-center py-2 px-3">
        <!-- Logo -->
        <a class="navbar-brand text-white fw-bold" href="/" style="font-size: 1.1rem; text-decoration: none;">
            <i class="bi bi-disc me-1"></i>MyMEDIA
        </a>

        <!-- Ações do utilizador -->
        <div class="user-actions d-flex align-items-center gap-2">
            @if (Api.IsAuthenticated)
            {
                <!-- Nome do utilizador com menu -->
                <div class="user-menu-container">
                    <button class="btn btn-user-toggle" @onclick="ToggleMenu">
                        <i class="bi bi-person-circle me-1"></i>
                        <span class="user-name">@GetShortName()</span>
                        <i class="bi @(mostrarMenu ? "bi-chevron-up" : "bi-chevron-down") ms-1" style="font-size: 0.7rem;"></i>
                    </button>
                    
                    @if (mostrarMenu)
                    {
                        <div class="user-dropdown">
                            <div class="dropdown-header">
                                <i class="bi bi-person-fill me-2"></i>@Api.GetUserInfo()?.NomeCompleto
                                <br/>
                                <small class="text-muted">@Api.GetUserInfo()?.Perfil</small>
                            </div>
                            <div class="dropdown-divider"></div>
                            @if (Api.GetUserInfo()?.Perfil == "Cliente")
                            {
                                <a class="dropdown-item" href="/minhas-compras" @onclick="FecharMenu">
                                    <i class="bi bi-bag me-2"></i>Minhas Compras
                                </a>
                            }
                            @if (Api.GetUserInfo()?.Perfil == "Fornecedor")
                            {
                                <a class="dropdown-item" href="/meus-produtos" @onclick="FecharMenu">
                                    <i class="bi bi-box me-2"></i>Meus Produtos
                                </a>
                                <a class="dropdown-item" href="/minhas-vendas" @onclick="FecharMenu">
                                    <i class="bi bi-graph-up me-2"></i>Minhas Vendas
                                </a>
                            }
                            <div class="dropdown-divider"></div>
                            <button class="dropdown-item text-danger" @onclick="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i>Sair
                            </button>
                        </div>
                    }
                </div>
            }
            else
            {
                <a href="/login" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-person me-1"></i><span class="d-none d-sm-inline">Entrar</span>
                </a>
                <a href="/registar" class="btn btn-warning btn-sm">
                    <i class="bi bi-person-plus me-1"></i><span class="d-none d-sm-inline">Registar</span>
                </a>
            }

            <!-- Carrinho -->
            <a href="/carrinho" class="btn btn-outline-light btn-sm position-relative">
                <i class="bi bi-cart3"></i>
                @if (Carrinho.TotalItens > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                        @Carrinho.TotalItens
                    </span>
                }
            </a>
        </div>
    </div>
</div>

<!-- Overlay para fechar menu ao clicar fora -->
@if (mostrarMenu)
{
    <div class="menu-overlay" @onclick="FecharMenu"></div>
}

<!-- CONTEÚDO PRINCIPAL -->
<div class="main-content">
    @Body
</div>

<!-- FOOTER -->
<footer class="footer-bottom py-2">
    <div class="container text-center">
        <small class="text-white-50">© 2025 MyMEDIA - ISEC</small>
    </div>
</footer>

@code {
    private bool mostrarMenu = false;

    protected override void OnInitialized()
    {
        Carrinho.OnChange += OnStateChanged;
        Api.OnAuthStateChanged += OnStateChanged;
    }

    private void OnStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleMenu()
    {
        mostrarMenu = !mostrarMenu;
    }

    private void FecharMenu()
    {
        mostrarMenu = false;
    }

    private string GetShortName()
    {
        var nome = Api.GetUserInfo()?.NomeCompleto ?? "";
        if (string.IsNullOrEmpty(nome)) return "User";
        var partes = nome.Split(' ');
        return partes[0]; // Primeiro nome apenas
    }

    private void Logout()
    {
        mostrarMenu = false;
        Api.Logout();
        Carrinho.LimparCarrinho();
        Nav.NavigateTo("/");
    }

    public void Dispose()
    {
        Carrinho.OnChange -= OnStateChanged;
        Api.OnAuthStateChanged -= OnStateChanged;
    }
}

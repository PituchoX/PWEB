@inherits LayoutComponentBase
@inject CarrinhoService Carrinho
@inject ApiService Api
@inject NavigationManager Nav

<!-- HEADER -->
<div class="header-top">
    <div class="container-fluid d-flex justify-content-between align-items-center py-2 px-3">
        <!-- Logo -->
        <a class="navbar-brand text-white fw-bold fs-4" href="/">
            <i class="bi bi-disc me-2"></i>MyMEDIA
        </a>

        <!-- Barra de pesquisa -->
        <div class="search-bar d-none d-md-flex flex-grow-1 mx-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Pesquisar produtos..." @bind="termoPesquisa" @onkeypress="OnKeyPress" />
                <button class="btn btn-warning" type="button" @onclick="Pesquisar">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        <!-- Ações do utilizador -->
        <div class="user-actions d-flex align-items-center">
            @if (Api.IsAuthenticated)
            {
                <div class="dropdown me-3">
                    <button class="btn btn-link text-white text-decoration-none dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-person-circle me-1"></i>
                        @Api.GetUserInfo()?.NomeCompleto
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        @if (Api.GetUserInfo()?.Perfil == "Cliente")
                        {
                            <li><a class="dropdown-item" href="/minhas-compras"><i class="bi bi-bag me-2"></i>Minhas Compras</a></li>
                        }
                        @if (Api.GetUserInfo()?.Perfil == "Fornecedor")
                        {
                            <li><a class="dropdown-item" href="/meus-produtos"><i class="bi bi-box me-2"></i>Meus Produtos</a></li>
                            <li><a class="dropdown-item" href="/minhas-vendas"><i class="bi bi-graph-up me-2"></i>Minhas Vendas</a></li>
                        }
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" href="#" @onclick="Logout"><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
                    </ul>
                </div>
            }
            else
            {
                <a href="/login" class="btn btn-outline-light btn-sm me-2">
                    <i class="bi bi-person me-1"></i>Entrar
                </a>
                <a href="/registar" class="btn btn-warning btn-sm me-3">
                    <i class="bi bi-person-plus me-1"></i>Registar
                </a>
            }

            <!-- Carrinho -->
            <a href="/carrinho" class="btn btn-outline-light position-relative">
                <i class="bi bi-cart3"></i>
                @if (Carrinho.TotalItens > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                        @Carrinho.TotalItens
                    </span>
                }
            </a>
        </div>
    </div>
</div>

<!-- CONTEÚDO PRINCIPAL -->
<div class="main-content">
    @Body
</div>

<!-- FOOTER -->
<footer class="footer-bottom py-3">
    <div class="container text-center">
        <span class="text-muted">© 2025 MyMEDIA - Programação Web - ISEC</span>
    </div>
</footer>

@code {
    private string termoPesquisa = "";

    protected override void OnInitialized()
    {
        Carrinho.OnChange += StateHasChanged;
    }

    private void Pesquisar()
    {
        if (!string.IsNullOrWhiteSpace(termoPesquisa))
        {
            Nav.NavigateTo($"/produtos?search={Uri.EscapeDataString(termoPesquisa)}");
        }
    }

    private void OnKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Pesquisar();
        }
    }

    private void Logout()
    {
        Api.Logout();
        Carrinho.LimparCarrinho();
        Nav.NavigateTo("/");
    }

    public void Dispose()
    {
        Carrinho.OnChange -= StateHasChanged;
    }
}

@page "/"
@inject ApiService Api
@inject CarrinhoService CarrinhoService
@inject NavigationManager Nav

<PageTitle>MyMEDIA - Loja Online</PageTitle>

<!-- SLIDER DE CATEGORIAS -->
<div class="categorias-slider">
    <div class="categorias-scroll">
        @if (categorias == null)
        {
            <span class="text-muted px-3">A carregar categorias...</span>
        }
        else if (!categorias.Any())
        {
            <span class="text-muted px-3">Sem categorias</span>
        }
        else
        {
            @foreach (var cat in categorias)
            {
                <div class="categoria-item @(categoriaSelecionada?.Id == cat.Id ? "active" : "")" 
                     @onclick="() => SelecionarCategoria(cat)">
                    <img src="@GetImagemCategoriaUrl(cat.Imagem)" 
                         alt="@cat.Nome"
                         loading="lazy" />
                    <span>@cat.Nome</span>
                </div>
            }
        }
    </div>
</div>

<!-- SLIDER DE SUBCATEGORIAS (aparece quando uma categoria está selecionada) -->
@if (categoriaSelecionada != null && subcategorias != null && subcategorias.Any())
{
    <div class="subcategorias-slider">
        <div class="subcategorias-scroll">
            <div class="subcategoria-item @(subcategoriaSelecionada == null ? "active" : "")" 
                 @onclick="LimparSubcategoria">
                <span>Todas</span>
            </div>
            @foreach (var sub in subcategorias)
            {
                <div class="subcategoria-item @(subcategoriaSelecionada?.Id == sub.Id ? "active" : "")" 
                     @onclick="() => SelecionarSubcategoria(sub)">
                    <span>@sub.Nome</span>
                </div>
            }
        </div>
    </div>
}

<div class="container-fluid py-3">
    <!-- PRODUTO DESTAQUE MOBILE (só aparece em mobile) -->
    @if (produtoDestaque != null)
    {
        <div class="destaque-mobile d-lg-none mb-3">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark py-2">
                    <i class="bi bi-star-fill me-2"></i><strong>Produto em Destaque</strong>
                </div>
                <div class="card-body p-2">
                    <div class="d-flex align-items-center">
                        <img src="@GetImagemUrl(produtoDestaque.Imagem)" alt="@produtoDestaque.Nome" 
                             class="destaque-mobile-img me-3"
                             loading="lazy"
                             @onclick="() => VerProduto(produtoDestaque.Id)" />
                        <div class="flex-grow-1">
                            <h6 class="mb-1 text-truncate" style="color: #2a0a5e;">@produtoDestaque.Nome</h6>
                            <small class="text-muted">@produtoDestaque.CategoriaNome</small>
                            @if (!string.IsNullOrEmpty(produtoDestaque.SubcategoriaNome))
                            {
                                <small class="text-muted"> / @produtoDestaque.SubcategoriaNome</small>
                            }
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <strong class="text-primary">@produtoDestaque.PrecoFinal.ToString("0.00") €</strong>
                                <button class="btn btn-warning btn-sm" @onclick="() => AdicionarAoCarrinho(produtoDestaque)">
                                    <i class="bi bi-cart-plus"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row">
        <!-- COLUNA PRINCIPAL - Produtos -->
        <div class="col-lg-9">
            <div class="secao-titulo mb-3">
                <i class="bi bi-collection me-2"></i>
                @if (categoriaSelecionada != null)
                {
                    <span>@categoriaSelecionada.Nome</span>
                    @if (subcategoriaSelecionada != null)
                    {
                        <span class="text-muted mx-1">/</span>
                        <span>@subcategoriaSelecionada.Nome</span>
                    }
                    <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="LimparFiltros">
                        <i class="bi bi-x"></i> Limpar filtro
                    </button>
                }
                else
                {
                    <span>Todos os Produtos</span>
                }
            </div>

            <div class="produtos-grid">
                @if (produtosVisiveis == null)
                {
                    <p class="text-muted">A carregar produtos...</p>
                }
                else if (!produtosVisiveis.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-1 text-muted"></i>
                        <p class="text-muted mt-3">Sem produtos disponíveis</p>
                    </div>
                }
                else
                {
                    @foreach (var prod in produtosVisiveis)
                    {
                        <div class="produto-card">
                            <img src="@GetImagemUrl(prod.Imagem)" alt="@prod.Nome" 
                                 loading="lazy"
                                 @onclick="() => VerProduto(prod.Id)" />
                            <div class="info">
                                <div class="nome" title="@prod.Nome">@prod.Nome</div>
                                <div class="categoria">
                                    @prod.CategoriaNome
                                    @if (!string.IsNullOrEmpty(prod.SubcategoriaNome))
                                    {
                                        <span> / @prod.SubcategoriaNome</span>
                                    }
                                </div>
                                <div class="preco">@prod.PrecoFinal.ToString("0.00") €</div>
                            </div>
                            @if (prod.Stock > 0)
                            {
                                <button class="btn btn-adicionar" @onclick="() => AdicionarAoCarrinho(prod)">
                                    <i class="bi bi-cart-plus me-1"></i> Adicionar
                                </button>
                            }
                            else
                            {
                                <button class="btn btn-secondary w-100" disabled>Esgotado</button>
                            }
                        </div>
                    }
                }
            </div>
        </div>

        <!-- COLUNA LATERAL - Produto Destaque (Desktop) -->
        <div class="col-lg-3 d-none d-lg-block">
            <div class="destaque-lateral">
                <div class="destaque-header">
                    <i class="bi bi-star-fill me-2"></i>Produto em Destaque
                </div>
                @if (produtoDestaque != null)
                {
                    <div class="destaque-content">
                        <img src="@GetImagemUrl(produtoDestaque.Imagem)" alt="@produtoDestaque.Nome" 
                             loading="lazy"
                             @onclick="() => VerProduto(produtoDestaque.Id)" />
                        <h5>@produtoDestaque.Nome</h5>
                        <p class="categoria">
                            @produtoDestaque.CategoriaNome
                            @if (!string.IsNullOrEmpty(produtoDestaque.SubcategoriaNome))
                            {
                                <span> / @produtoDestaque.SubcategoriaNome</span>
                            }
                        </p>
                        <p class="preco">@produtoDestaque.PrecoFinal.ToString("0.00") €</p>
                        <button class="btn btn-warning w-100" @onclick="() => AdicionarAoCarrinho(produtoDestaque)">
                            <i class="bi bi-cart-plus me-1"></i> Adicionar ao Carrinho
                        </button>
                    </div>
                }
                else
                {
                    <div class="text-center text-muted py-4">
                        <i class="bi bi-box display-4"></i>
                        <p class="mt-2">Sem destaque</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    private List<CategoriaDto>? categorias;
    private List<SubcategoriaDto>? subcategorias;
    private List<ProdutoDto>? todosProdutos;
    private List<ProdutoDto>? produtosVisiveis;
    private ProdutoDto? produtoDestaque;
    private CategoriaDto? categoriaSelecionada;
    private SubcategoriaDto? subcategoriaSelecionada;

    protected override async Task OnInitializedAsync()
    {
        await CarregarDados();
    }

    private async Task CarregarDados()
    {
        categorias = await Api.GetCategoriasAsync();
        todosProdutos = await Api.GetProdutosAsync();
        produtosVisiveis = todosProdutos;
        produtoDestaque = await Api.GetProdutoDestaqueAsync();
    }

    private string GetImagemUrl(string? imagem)
    {
        if (string.IsNullOrEmpty(imagem))
            return "img/noproductstrans.png";
        
        if (imagem.StartsWith("http"))
            return imagem;
        
        return Api.GetImageUrl(imagem);
    }

    private string GetImagemCategoriaUrl(string? imagem)
    {
        // Se não há imagem, usa placeholder local
        if (string.IsNullOrEmpty(imagem))
            return "img/noproductstrans.png";
        
        // Se já é URL completa
        if (imagem.StartsWith("http"))
            return imagem;
        
        // Tenta carregar da API
        var url = Api.GetImageUrl(imagem);
        return !string.IsNullOrEmpty(url) ? url : "img/noproductstrans.png";
    }

    private async Task SelecionarCategoria(CategoriaDto categoria)
    {
        if (categoriaSelecionada?.Id == categoria.Id)
        {
            LimparFiltros();
            return;
        }
        
        categoriaSelecionada = categoria;
        subcategoriaSelecionada = null;
        
        // Carregar subcategorias desta categoria
        subcategorias = await Api.GetSubcategoriasPorCategoriaAsync(categoria.Id);
        
        // Filtrar produtos por categoria
        produtosVisiveis = await Api.GetProdutosPorCategoriaAsync(categoria.Id);
    }

    private async Task SelecionarSubcategoria(SubcategoriaDto subcategoria)
    {
        if (subcategoriaSelecionada?.Id == subcategoria.Id)
        {
            await LimparSubcategoria();
            return;
        }
        
        subcategoriaSelecionada = subcategoria;
        produtosVisiveis = await Api.GetProdutosPorSubcategoriaAsync(subcategoria.Id);
    }

    private async Task LimparSubcategoria()
    {
        subcategoriaSelecionada = null;
        if (categoriaSelecionada != null)
        {
            produtosVisiveis = await Api.GetProdutosPorCategoriaAsync(categoriaSelecionada.Id);
        }
    }

    private void LimparFiltros()
    {
        categoriaSelecionada = null;
        subcategoriaSelecionada = null;
        subcategorias = null;
        produtosVisiveis = todosProdutos;
    }

    private void VerProduto(int id)
    {
        Nav.NavigateTo($"/produto/{id}");
    }

    private void AdicionarAoCarrinho(ProdutoDto produto)
    {
        CarrinhoService.AdicionarItem(produto);
    }
}

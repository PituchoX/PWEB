@page "/categorias"
@using GestaoLoja.Data
@inject ApplicationDbContext db
@inject NavigationManager nav
@using GestaoLoja.Entities


<h3>Categorias</h3>

<button class="btn btn-primary mb-3" @onclick='() => nav.NavigateTo(" /categorias/criar")'>
    Nova Categoria
</button>

@if (categorias == null)
{
    <p>A carregar...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in categorias)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>@c.Nome</td>
                    <td>
                        <button class="btn btn-sm btn-warning"
                                @onclick='() => nav.NavigateTo($" /categorias/editar/{c.Id}")''>
                            Editar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Categorias>? categorias;

    protected override void OnInitialized()
    {
        categorias = db.Categorias
            .OrderBy(c => c.Nome)
            .ToList();
    }
}

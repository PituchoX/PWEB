@page "/categorias"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador,Funcionário")]
@inject ApplicationDbContext db
@inject NavigationManager nav
@using Microsoft.EntityFrameworkCore
@rendermode InteractiveServer


<h3>Categorias</h3>

<AuthorizeView Roles="Administrador,Funcionário">
    <button class="btn btn-primary btn-sm mb-3" @onclick="Criar">
        Nova Categoria
    </button>
</AuthorizeView>

@if (categorias is null)
{
    <p>A carregar...</p>
}
else
{
    <table class="table table-striped align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Imagem</th>
                <th>Nome</th>
                <th style="width:180px;">Acoes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in categorias)
            {
                <tr>
                    <td>@c.Id</td>
                    <td>
                        @if (!string.IsNullOrEmpty(c.Imagem))
                        {
                            <img src="img/@c.Imagem" width="50" height="50" style="object-fit:cover" />
                        }
                    </td>
                    <td>@c.Nome</td>
                    <td>
                        <AuthorizeView Roles="Administrador,Funcionário">
                            <button class="btn btn-sm btn-warning me-1" @onclick="() => Editar(c.Id)">
                                Editar
                            </button>
                            <button class="btn btn-sm btn-danger" @onclick="() => Apagar(c)">
                                Apagar
                            </button>
                        </AuthorizeView>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Categorias>? categorias;

    protected override void OnInitialized()
    {
        CarregarDados();
    }

    void CarregarDados()
    {
        categorias = db.Categorias.OrderBy(c => c.Nome).ToList();
    }

    void Criar() => nav.NavigateTo("/categorias/criar");

    void Editar(int id) => nav.NavigateTo($"/categorias/editar/{id}");

    private void Apagar(Categorias categoria)
    {
        db.Categorias.Remove(categoria);
        db.SaveChanges();
        CarregarDados();
    }
}
@page "/gestao/fornecedores"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@attribute [Authorize(Roles = "Administrador,Funcionário")]
@inject GestaoLoja.Data.ApplicationDbContext _context

<h3>Gestão de Fornecedores</h3>

@if (carregando)
{
    <p>A carregar fornecedores...</p>
}
else if (fornecedores is null || fornecedores.Count == 0)
{
    <p>Não existem fornecedores registados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome Empresa</th>
                <th>Responsável</th>
                <th>Email</th>
                <th>Registo</th>
                <th>Conta</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var f in fornecedores)
            {
                <tr>
                    <td>@f.NomeEmpresa</td>
                    <td>@f.ApplicationUser?.NomeCompleto</td>
                    <td>@f.ApplicationUser?.Email</td>

                    <!-- Estado do registo -->
                    <td>
                        @if (f.Estado == "Pendente")
                        {
                            <span class="badge bg-warning">Pendente</span>
                        }
                        else if (f.Estado == "Aprovado" || f.Estado == "Ativo")
                        {
                            <span class="badge bg-success">Aprovado</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@f.Estado</span>
                        }
                    </td>

                    <!-- Estado da conta -->
                    <td>
                        @if (f.ApplicationUser?.Estado == "Ativo")
                        {
                            <span class="badge bg-success">Ativa</span>
                        }
                        else if (f.ApplicationUser?.Estado == "Pendente")
                        {
                            <span class="badge bg-warning">Pendente</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativa</span>
                        }
                    </td>

                    <td>
                        <!-- Aprovar registo -->
                        @if (f.Estado == "Pendente")
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="@(async () => await AprovarFornecedor(f.Id))">
                                Aprovar Registo
                            </button>
                        }

                        <!-- Ativar conta -->
                        @if (f.ApplicationUser != null && f.ApplicationUser.Estado != "Ativo")
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="@(async () => await AlterarEstadoConta(f.ApplicationUserId, "Ativo"))">
                                Ativar Conta
                            </button>
                        }

                        <!-- Desativar conta -->
                        @if (f.ApplicationUser != null && f.ApplicationUser.Estado == "Ativo")
                        {
                            <button class="btn btn-sm btn-danger"
                                    @onclick="@(async () => await AlterarEstadoConta(f.ApplicationUserId, "Inativo"))">
                                Desativar Conta
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Fornecedor>? fornecedores;
    private bool carregando = true;

    protected override async Task OnInitializedAsync()
    {
        await CarregarFornecedores();
    }

    private async Task CarregarFornecedores()
    {
        carregando = true;

        fornecedores = await _context.Fornecedores
            .Include(f => f.ApplicationUser)
            .ToListAsync();

        carregando = false;
        StateHasChanged();
    }

    private async Task AprovarFornecedor(int id)
    {
        var fornecedor = await _context.Fornecedores
            .Include(f => f.ApplicationUser)
            .FirstOrDefaultAsync(f => f.Id == id);
            
        if (fornecedor == null) return;

        fornecedor.Estado = "Aprovado";
        
        // Também ativar a conta do utilizador
        if (fornecedor.ApplicationUser != null)
        {
            fornecedor.ApplicationUser.Estado = "Ativo";
        }

        await _context.SaveChangesAsync();
        await CarregarFornecedores();
    }

    private async Task AlterarEstadoConta(string userId, string novoEstado)
    {
        var user = await _context.Users.FindAsync(userId);
        if (user == null) return;

        user.Estado = novoEstado;

        await _context.SaveChangesAsync();
        await CarregarFornecedores();
    }
}

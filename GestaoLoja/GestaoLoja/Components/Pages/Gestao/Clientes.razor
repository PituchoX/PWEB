@page "/gestao/clientes"
@inject GestaoLoja.Data.ApplicationDbContext _context

<h3>Gestão de Clientes</h3>

@if (carregando)
{
    <p>A carregar clientes...</p>
}
else if (clientes is null || clientes.Count == 0)
{
    <p>Não existem clientes registados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>NIF</th>
                <th>Registo</th>
                <th>Conta</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in clientes)
            {
                <tr>
                    <td>@c.ApplicationUser?.NomeCompleto</td>
                    <td>@c.ApplicationUser?.Email</td>
                    <td>@c.NIF</td>

                    <!-- Estado do Cliente -->
                    <td>
                        @if (c.Estado == "Pendente")
                        {
                            <span class="badge bg-warning">Pendente</span>
                        }
                        else
                        {
                            <span class="badge bg-success">Aprovado</span>
                        }
                    </td>

                    <!-- Estado da Conta -->
                    <td>
                        @if (c.ApplicationUser?.Estado == "Ativo")
                        {
                            <span class="badge bg-success">Ativa</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativa</span>
                        }
                    </td>

                    <td>
                        <!-- Aprovar/registar -->
                        @if (c.Estado == "Pendente")
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="() => AlterarEstadoRegisto(c.Id)">
                                Aprovar
                            </button>
                        }

                        <!-- Ativar conta -->
                        @if (c.ApplicationUser?.Estado == "Inativo")
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="() => AlterarEstadoConta(c.ApplicationUserId!, estadoAtivo)">
                                Ativar Conta
                            </button>
                        }

                        <!-- Desativar conta -->
                        @if (c.ApplicationUser?.Estado == "Ativo")
                        {
                            <button class="btn btn-sm btn-danger"
                                    @onclick="() => AlterarEstadoConta(c.ApplicationUserId!, estadoInativo)">
                                Desativar Conta
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {

    string estadoAtivo = "Ativo";
    string estadoInativo = "Inativo";

    private List<Cliente>? clientes;
    private bool carregando = true;

    protected override async Task OnInitializedAsync()
    {
        await CarregarClientes();
    }

    private async Task CarregarClientes()
    {
        carregando = true;

        clientes = await _context.Clientes
            .Include(c => c.ApplicationUser)
            .ToListAsync();

        carregando = false;
    }

    // Aprovar o registo
    private async Task AlterarEstadoRegisto(int id)
    {
        var cliente = await _context.Clientes.FindAsync(id);
        if (cliente == null) return;

        cliente.Estado = "Aprovado";

        await _context.SaveChangesAsync();
        await CarregarClientes();
    }

    // Alterar estado da conta (ApplicationUser)
    private async Task AlterarEstadoConta(string userId, string novoEstado)
    {
        var user = await _context.Users.FindAsync(userId);
        if (user == null) return;

        user.Estado = novoEstado;

        await _context.SaveChangesAsync();
        await CarregarClientes();
    }
}

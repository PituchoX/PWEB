@page "/gestao/clientes"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.EntityFrameworkCore
@using GestaoLoja.Entities
@attribute [Authorize(Roles = "Administrador,Funcionário")]
@inject GestaoLoja.Data.ApplicationDbContext _context

<h3>Gestão de Clientes</h3>

@if (carregando)
{
    <p>A carregar clientes...</p>
}
else if (clientes is null || clientes.Count == 0)
{
    <p>Não existem clientes registados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>NIF</th>
                <th>Registo</th>
                <th>Conta</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in clientes)
            {
                <tr>
                    <td>@c.ApplicationUser?.NomeCompleto</td>
                    <td>@c.ApplicationUser?.Email</td>
                    <td>@c.NIF</td>

                    <!-- Estado do Registo do Cliente -->
                    <td>
                        @if (c.Estado == "Pendente")
                        {
                            <span class="badge bg-warning">Pendente</span>
                        }
                        else if (c.Estado == "Ativo" || c.Estado == "Aprovado")
                        {
                            <span class="badge bg-success">Aprovado</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@c.Estado</span>
                        }
                    </td>

                    <!-- Estado da Conta (ApplicationUser) -->
                    <td>
                        @if (c.ApplicationUser?.Estado == "Ativo")
                        {
                            <span class="badge bg-success">Ativa</span>
                        }
                        else if (c.ApplicationUser?.Estado == "Pendente")
                        {
                            <span class="badge bg-warning">Pendente</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inativa</span>
                        }
                    </td>

                    <td>
                        <!-- Aprovar registo do cliente -->
                        @if (c.Estado == "Pendente")
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="@(async () => await AprovarRegisto(c.Id))">
                                Aprovar Registo
                            </button>
                        }

                        <!-- Ativar conta do utilizador -->
                        @if (c.ApplicationUser != null && c.ApplicationUser.Estado != "Ativo")
                        {
                            <button class="btn btn-sm btn-success me-1"
                                    @onclick="@(async () => await AlterarEstadoConta(c.ApplicationUserId, "Ativo"))">
                                Ativar Conta
                            </button>
                        }

                        <!-- Desativar conta do utilizador -->
                        @if (c.ApplicationUser != null && c.ApplicationUser.Estado == "Ativo")
                        {
                            <button class="btn btn-sm btn-danger"
                                    @onclick="@(async () => await AlterarEstadoConta(c.ApplicationUserId, "Inativo"))">
                                Desativar Conta
                            </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Cliente>? clientes;
    private bool carregando = true;

    protected override async Task OnInitializedAsync()
    {
        await CarregarClientes();
    }

    private async Task CarregarClientes()
    {
        carregando = true;

        clientes = await _context.Clientes
            .Include(c => c.ApplicationUser)
            .ToListAsync();

        carregando = false;
        StateHasChanged();
    }

    private async Task AprovarRegisto(int id)
    {
        var cliente = await _context.Clientes
            .Include(c => c.ApplicationUser)
            .FirstOrDefaultAsync(c => c.Id == id);
            
        if (cliente == null) return;

        cliente.Estado = "Aprovado";
        
        // Também ativar a conta do utilizador
        if (cliente.ApplicationUser != null)
        {
            cliente.ApplicationUser.Estado = "Ativo";
        }

        await _context.SaveChangesAsync();
        await CarregarClientes();
    }

    private async Task AlterarEstadoConta(string userId, string novoEstado)
    {
        var user = await _context.Users.FindAsync(userId);
        if (user == null) return;

        user.Estado = novoEstado;

        await _context.SaveChangesAsync();
        await CarregarClientes();
    }
}

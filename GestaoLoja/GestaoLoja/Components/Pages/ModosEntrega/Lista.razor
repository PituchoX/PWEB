@page "/modosentrega"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador,Funcionário")]
@inject ApplicationDbContext db
@inject NavigationManager nav

<h3>Modos de Entrega</h3>

<AuthorizeView Roles="Administrador,Funcionário">
    <button class="btn btn-primary btn-sm mb-3" @onclick="Criar">
        Novo Modo de Entrega
    </button>
</AuthorizeView>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Detalhe</th>
            <th style="width:180px;">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var modo in modos)
        {
            <tr>
                <td>@modo.Nome</td>
                <td>@modo.Tipo</td>
                <td>@modo.Detalhe</td>
                <td>
                    <AuthorizeView Roles="Administrador,Funcionário">
                        <button class="btn btn-warning btn-sm me-1" @onclick="@(() => Editar(modo.Id))">
                            Editar
                        </button>
                        <button class="btn btn-danger btn-sm" @onclick="@(() => Apagar(modo.Id))">
                            Apagar
                        </button>
                    </AuthorizeView>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    List<ModoEntrega> modos = new();

    protected override void OnInitialized()
    {
        modos = db.ModosEntrega.OrderBy(m => m.Nome).ToList();
    }

    void Criar() => nav.NavigateTo("/modosentrega/criar");

    void Editar(int id) => nav.NavigateTo($"/modosentrega/editar/{id}");

    void Apagar(int id)
    {
        var modo = db.ModosEntrega.Find(id);
        if (modo is null) return;

        db.ModosEntrega.Remove(modo);
        db.SaveChanges();

        modos = db.ModosEntrega.OrderBy(m => m.Nome).ToList();
        StateHasChanged();
    }
}

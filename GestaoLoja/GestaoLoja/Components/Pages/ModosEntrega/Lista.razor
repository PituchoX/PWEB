@page "/modosentrega"

@inject ApplicationDbContext db
@inject NavigationManager nav

<h3>Modos de Entrega</h3>

<button class="btn btn-primary mb-3" @onclick="Criar">
    Novo Modo de Entrega
</button>

@if (modos is null)
{
    <p>A carregar...</p>
}
else if (!modos.Any())
{
    <div class="alert alert-warning">Nenhum modo de entrega encontrado.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tipo</th>
                <th style="width:120px;">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in modos)
            {
                <tr>
                    <td>@m.Id</td>
                    <td>@m.Tipo</td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="() => Editar(m.Id)">
                            Editar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<ModoEntrega>? modos;

    protected override void OnInitialized()
    {
        modos = db.ModosEntrega
                  .OrderBy(m => m.Tipo)
                  .ToList();
    }

    void Criar() => nav.NavigateTo("/modosentrega/criar");
    void Editar(int id) => nav.NavigateTo($"/modosentrega/editar/{id}");
}

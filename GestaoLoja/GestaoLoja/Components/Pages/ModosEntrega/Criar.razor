@page "/modosentrega/criar"
@inject ApplicationDbContext db
@inject NavigationManager nav

<h3>Criar Modo de Entrega</h3>

<div class="mb-3">
    <label>Tipo</label>
    <input class="form-control" @bind="modo.Tipo" />
</div>

<button class="btn btn-success" @onclick="Guardar">Guardar</button>
<button class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>

@code {
    ModoEntrega modo = new();

    void Guardar()
    {
        if (string.IsNullOrWhiteSpace(modo.Tipo))
            return;

        db.ModosEntrega.Add(modo);
        db.SaveChanges();
        nav.NavigateTo("/modosentrega");
    }

    void Cancelar() => nav.NavigateTo("/modosentrega");
}

@page "/modosentrega/editar/{id:int}"
@inject ApplicationDbContext db
@inject NavigationManager nav

<h3>Editar Modo de Entrega</h3>

@if (modo is null)
{
    <p>A carregar...</p>
}
else
{
    <div class="mb-3">
        <label>Tipo</label>
        <input class="form-control" @bind="modo.Tipo" />
    </div>

    <button class="btn btn-success" @onclick="Guardar">Guardar</button>
    <button class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
}

@code {
    [Parameter] public int id { get; set; }
    ModoEntrega? modo;

    protected override void OnInitialized()
    {
        modo = db.ModosEntrega.FirstOrDefault(m => m.Id == id);
    }

    void Guardar()
    {
        if (modo is null) return;

        db.ModosEntrega.Update(modo);
        db.SaveChanges();
        nav.NavigateTo("/modosentrega");
    }

    void Cancelar() => nav.NavigateTo("/modosentrega");
}

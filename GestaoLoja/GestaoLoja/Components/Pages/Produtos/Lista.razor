@page "/produtos"

@inject ApplicationDbContext db
@inject NavigationManager nav

<h3>Produtos</h3>

<button class="btn btn-primary mb-3" @onclick='() => nav.NavigateTo("/produtos/criar")'>
    Novo Produto
</button>

@if (produtos == null)
{
    <p>A carregar...</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Categoria</th>
                <th>Modo de Entrega</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in produtos)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nome</td>
                    <td>@p.Preco €</td>
                    <td>@p.Categoria?.Nome</td>
                    <td>@p.ModoEntrega?.Tipo</td>
                    <td>
                        <button class="btn btn-warning btn-sm"
                                @onclick='() => nav.NavigateTo($"/produtos/editar/{p.Id}")'>
                            Editar
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    List<Produtos> produtos;

    protected override void OnInitialized()
    {
        produtos = db.Produtos
            .Include(p => p.Categoria)
            .Include(p => p.ModoEntrega)
            .OrderBy(p => p.Nome)
            .ToList();
    }
}

@implements IDisposable
@inject NavigationManager NavigationManager

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- Dashboard -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill me-2"></span>
                Gestão de Loja
            </NavLink>
        </div>

        <!-- Produtos -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="produtos">
                <span class="bi bi-list-ul me-2"></span>
                Produtos
            </NavLink>
        </div>

        <!-- Categorias -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="categorias">
                <span class="bi bi-list-ul me-2"></span>
                Categorias
            </NavLink>
        </div>

        <!-- Modos de Entrega -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="modosentrega">
                <span class="bi bi-list-ul me-2"></span>
                Modos de Entrega
            </NavLink>
        </div>

        <!-- Menu especial apenas para Administrador -->
        <AuthorizeView Roles="Administrador">
            <hr class="text-light mx-3" />

            <div class="nav-item px-3 mt-2">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/users">
                    <span class="bi bi-people-fill me-2"></span>
                    Gerir Utilizadores
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="/admin/roles">
                    <span class="bi bi-shield-lock-fill me-2"></span>
                    Gerir Roles
                </NavLink>
            </div>
        </AuthorizeView>

    </nav>
</div>

<style>
    /* Alinhamento perfeito dos ícones */
    .nav-link span.bi {
        display: flex;
        align-items: center;
        line-height: 1;
    }
</style>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

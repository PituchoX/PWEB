@implements IDisposable
@inject NavigationManager NavigationManager

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">

        <!-- Dashboard -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill me-2"></span>
                Gestão de Loja
            </NavLink>
        </div>

        <AuthorizeView Roles="Administrador,Funcionário">
            <!-- Produtos -->
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="produtos">
                    <span class="bi bi-box-seam me-2"></span>
                    Produtos
                </NavLink>
            </div>

            <!-- Categorias -->
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="categorias">
                    <span class="bi bi-tags-fill me-2"></span>
                    Categorias
                </NavLink>
            </div>

            <!-- Modos de Entrega -->
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="modosentrega">
                    <span class="bi bi-truck me-2"></span>
                    Modos de Entrega
                </NavLink>
            </div>

            <hr class="text-light mx-3" />

            <!-- Clientes -->
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="gestao/clientes">
                    <span class="bi bi-people-fill me-2"></span>
                    Clientes
                </NavLink>
            </div>

            <!-- Fornecedores -->
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="gestao/fornecedores">
                    <span class="bi bi-building me-2"></span>
                    Fornecedores
                </NavLink>
            </div>

            <!-- Vendas -->
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex align-items-center" href="gestao/vendas">
                    <span class="bi bi-cash-coin me-2"></span>
                    Vendas
                </NavLink>
            </div>
        </AuthorizeView>

        <hr class="text-light mx-3" />

        <!-- Sobre -->
        <div class="nav-item px-3">
            <NavLink class="nav-link d-flex align-items-center" href="sobre">
                <span class="bi bi-info-circle me-2"></span>
                Sobre
            </NavLink>
        </div>

        <!-- Logout - só aparece se estiver autenticado -->
        <AuthorizeView>
            <Authorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link d-flex align-items-center" href="Account/Logout">
                        <span class="bi bi-box-arrow-right me-2"></span>
                        Logout
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>

    </nav>
</div>

<style>
    /* Alinhamento perfeito dos ícones */
    .nav-link span.bi {
        display: flex;
        align-items: center;
        line-height: 1;
    
    }
</style>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}

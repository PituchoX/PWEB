@inherits LayoutComponentBase

<div class="top-header bg-light px-4 d-flex justify-content-between align-items-center shadow-sm">

    <a class="navbar-brand text-dark fw-bold fs-4" href="/">FrutiLândia</a>

    <div class="d-flex align-items-center">
        <NavLink class="nav-link text-dark me-3" href="/sobre">
            Sobre
        </NavLink>

        <AuthorizeView>
            <Authorized>
                <a href="Account/Manage" class="nav-link text-dark me-3">
                    Olá, @context.User.Identity?.Name!
                </a>

                <form action="Account/Logout" method="post" class="d-inline">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="/" />
                    <button type="submit" class="nav-link btn btn-link text-dark border-0 p-0">
                        Logout
                    </button>
                </form>
            </Authorized>
            <NotAuthorized>
                <NavLink class="nav-link text-dark me-3" href="Account/Register">
                    Registar
                </NavLink>
                <NavLink class="nav-link text-dark" href="Account/Login">
                    Login
                </NavLink>
            </NotAuthorized>
        </AuthorizeView>
    </div>
</div>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .top-header {
        height: 60px;
    }
</style>
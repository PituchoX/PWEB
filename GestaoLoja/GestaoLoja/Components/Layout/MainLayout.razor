@inherits LayoutComponentBase

<div class="top-header px-4 d-flex justify-content-between align-items-center shadow-sm"
     style="background-color: #2a0a5e;">
 
    <a class="navbar-brand text-white fw-bold fs-4" href="/">FrutiLândia</a>

    <div class="d-flex align-items-center">

        <!-- SOBRE -->
        <NavLink class="nav-link text-white me-3 d-flex align-items-center" href="/sobre">
            <img src="img/about.png" class="me-1" style="height:20px;" />
            Sobre
        </NavLink>

        <AuthorizeView>

            <Authorized>
                <a href="Account/Manage" class="nav-link text-white me-3">
                    Olá, @context.User.Identity?.Name!
                </a>

                <form action="Account/Logout" method="post" class="d-inline">
                    <AntiforgeryToken />
                    <input type="hidden" name="ReturnUrl" value="/" />
                    <button type="submit" class="nav-link btn btn-link text-dark border-0 p-0">
                        Logout
                    </button>
                </form>
            </Authorized>

            <NotAuthorized>
                <!-- REGISTAR -->
                <NavLink class="nav-link text-white me-3 d-flex align-items-center" href="Account/Register">
                    <img src="img/register.png" class="me-1" style="height:20px;" />
                    Registar
                </NavLink>

                <!-- LOGIN -->
                <NavLink class="nav-link text-white d-flex align-items-center" href="Account/Login">
                    <img src="img/icoperfil.png" class="me-1" style="height:20px;" />
                    Login
                </NavLink>
            </NotAuthorized>

        </AuthorizeView>

    </div>
</div>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .top-header {
        height: 60px;
    }
</style>

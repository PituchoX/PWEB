@page "/minhas-compras"
@inject ApiService Api
@inject NavigationManager Nav
@inject IConfiguration Config

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-bag me-2"></i>Minhas Compras
    </h2>

    @if (!Api.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Precisa de <a href="/login?returnUrl=/minhas-compras">entrar</a> para ver as suas compras.
        </div>
    }
    else if (vendas == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else if (!vendas.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Ainda nao tem compras</h4>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-cart me-2"></i>Comecar a comprar
            </a>
        </div>
    }
    else
    {
        @foreach (var venda in vendas)
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-receipt me-2"></i>
                        <strong>Encomenda #@venda.Id</strong>
                        <span class="text-muted ms-3">
                            <i class="bi bi-calendar me-1"></i>@venda.Data
                        </span>
                    </div>
                    <span class="badge @GetEstadoBadgeClass(venda.Estado)">@GetEstadoLabel(venda.Estado)</span>
                </div>
                <div class="card-body">
                    @if (venda.Linhas != null && venda.Linhas.Any())
                    {
                        @foreach (var linha in venda.Linhas)
                        {
                            <div class="d-flex align-items-center border-bottom py-2">
                                <img src="@($"{Config["ApiBaseUrl"]}img/{linha.ProdutoImagem}")"
                                     alt="@linha.ProdutoNome"
                                     style="width: 60px; height: 60px; object-fit: cover;"
                                     class="rounded me-3"
                                     onerror="this.src='/img/noproducts.png'" />
                                <div class="flex-grow-1">
                                    <h6 class="mb-0">@linha.ProdutoNome</h6>
                                    <small class="text-muted">
                                        @linha.Quantidade x @linha.PrecoUnitario.ToString("C2")
                                    </small>
                                </div>
                                <div class="text-end">
                                    <strong class="text-primary">@linha.Subtotal.ToString("C2")</strong>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Sem detalhes de produtos</p>
                    }
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center bg-light">
                    <span class="text-muted">
                        @if (venda.Linhas != null)
                        {
                            <span>@venda.Linhas.Sum(l => l.Quantidade) produto(s)</span>
                        }
                    </span>
                    <div>
                        <span class="me-2">Total:</span>
                        <strong class="text-primary fs-5">@venda.Total.ToString("C2")</strong>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<VendaDto>? vendas;

    protected override async Task OnInitializedAsync()
    {
        if (Api.IsAuthenticated)
        {
            vendas = await Api.GetMinhasVendasAsync();
        }
    }

    private string GetEstadoBadgeClass(string estado) => estado switch
    {
        "Pendente" => "bg-warning text-dark",
        "Confirmada" => "bg-success",
        "Expedida" => "bg-info",
        "Entregue" => "bg-primary",
        "Rejeitada" => "bg-danger",
        "Cancelada" => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetEstadoLabel(string estado) => estado switch
    {
        "Pendente" => "Aguarda Confirmacao",
        "Confirmada" => "Confirmada",
        "Expedida" => "Expedida",
        "Entregue" => "Entregue",
        "Rejeitada" => "Rejeitada",
        "Cancelada" => "Cancelada",
        _ => estado
    };
}

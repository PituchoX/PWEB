@page "/meus-produtos"
@inject ApiService Api
@inject NavigationManager Nav
@inject IConfiguration Config

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-box me-2"></i>Meus Produtos
        </h2>
        <button class="btn btn-primary" @onclick="AbrirFormulario">
            <i class="bi bi-plus-circle me-2"></i>Novo Produto
        </button>
    </div>

    @if (!Api.IsAuthenticated || Api.GetUserInfo()?.Perfil != "Fornecedor")
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Esta página é apenas para fornecedores.
        </div>
    }
    else if (produtos == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else
    {
        @if (mostrarFormulario)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">@(produtoEditar != null ? "Editar Produto" : "Novo Produto")</h5>
                </div>
                <div class="card-body">
                    <EditForm Model="produtoForm" OnValidSubmit="GuardarProduto">
                        <DataAnnotationsValidator />
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Nome</label>
                                <InputText @bind-Value="produtoForm.Nome" class="form-control" />
                                <ValidationMessage For="@(() => produtoForm.Nome)" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Preço Base (€)</label>
                                <InputNumber @bind-Value="produtoForm.PrecoBase" class="form-control" />
                            </div>
                            <div class="col-md-3 mb-3">
                                <label class="form-label">Stock</label>
                                <InputNumber @bind-Value="produtoForm.Stock" class="form-control" />
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Categoria</label>
                                <InputSelect @bind-Value="produtoForm.CategoriaId" class="form-select">
                                    <option value="0">Selecione...</option>
                                    @if (categorias != null)
                                    {
                                        @foreach (var cat in categorias)
                                        {
                                            <option value="@cat.Id">@cat.Nome</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Modo de Entrega</label>
                                <InputSelect @bind-Value="produtoForm.ModoEntregaId" class="form-select">
                                    <option value="0">Selecione...</option>
                                    @if (modosEntrega != null)
                                    {
                                        @foreach (var modo in modosEntrega)
                                        {
                                            <option value="@modo.Id">@modo.Nome</option>
                                        }
                                    }
                                </InputSelect>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label class="form-label">Imagem</label>
                                <InputText @bind-Value="produtoForm.Imagem" class="form-control" placeholder="nome_ficheiro.png" />
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(mensagemErro))
                        {
                            <div class="alert alert-danger">@mensagemErro</div>
                        }

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success" disabled="@processando">
                                @if (processando)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-check me-1"></i>Guardar
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="FecharFormulario">
                                Cancelar
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        }

        @if (!produtos.Any())
        {
            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                Ainda não tem produtos. Clique em "Novo Produto" para adicionar.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Imagem</th>
                            <th>Nome</th>
                            <th>Categoria</th>
                            <th>Preço Base</th>
                            <th>Preço Final</th>
                            <th>Stock</th>
                            <th>Estado</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var prod in produtos)
                        {
                            <tr>
                                <td>
                                    <img src="@($"{Config["ApiBaseUrl"]}img/{prod.Imagem}")"
                                         alt="@prod.Nome"
                                         style="width: 50px; height: 50px; object-fit: cover;"
                                         onerror="this.src='images/semfoto.png'" />
                                </td>
                                <td>@prod.Nome</td>
                                <td>@prod.CategoriaNome</td>
                                <td>@prod.PrecoBase.ToString("C2")</td>
                                <td>@prod.PrecoFinal.ToString("C2")</td>
                                <td>@prod.Stock</td>
                                <td>
                                    <span class="badge @GetEstadoBadgeClass(prod.Estado)">@prod.Estado</span>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-warning me-1" @onclick="() => EditarProduto(prod)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" @onclick="() => ApagarProduto(prod.Id)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>

@code {
    private List<ProdutoDto>? produtos;
    private List<CategoriaDto>? categorias;
    private List<ModoEntregaDto>? modosEntrega;
    private ProdutoCreateDto produtoForm = new();
    private ProdutoDto? produtoEditar;
    private bool mostrarFormulario = false;
    private bool processando = false;
    private string? mensagemErro;

    protected override async Task OnInitializedAsync()
    {
        if (Api.IsAuthenticated && Api.GetUserInfo()?.Perfil == "Fornecedor")
        {
            await CarregarDados();
        }
    }

    private async Task CarregarDados()
    {
        produtos = await Api.GetMeusProdutosAsync();
        categorias = await Api.GetCategoriasAsync();
        modosEntrega = await Api.GetModosEntregaAsync();
    }

    private void AbrirFormulario()
    {
        produtoEditar = null;
        produtoForm = new ProdutoCreateDto();
        mostrarFormulario = true;
    }

    private void FecharFormulario()
    {
        mostrarFormulario = false;
        mensagemErro = null;
    }

    private void EditarProduto(ProdutoDto produto)
    {
        produtoEditar = produto;
        produtoForm = new ProdutoCreateDto
        {
            Nome = produto.Nome,
            PrecoBase = produto.PrecoBase,
            Stock = produto.Stock,
            Imagem = produto.Imagem,
            CategoriaId = produto.CategoriaId,
            ModoEntregaId = produto.ModoEntregaId
        };
        mostrarFormulario = true;
    }

    private async Task GuardarProduto()
    {
        processando = true;
        mensagemErro = null;

        try
        {
            bool sucesso;
            if (produtoEditar != null)
            {
                var updateDto = new ProdutoUpdateDto
                {
                    Id = produtoEditar.Id,
                    Nome = produtoForm.Nome,
                    PrecoBase = produtoForm.PrecoBase,
                    Stock = produtoForm.Stock,
                    Imagem = produtoForm.Imagem,
                    CategoriaId = produtoForm.CategoriaId,
                    ModoEntregaId = produtoForm.ModoEntregaId
                };
                sucesso = await Api.AtualizarProdutoAsync(updateDto);
            }
            else
            {
                sucesso = await Api.CriarProdutoAsync(produtoForm);
            }

            if (sucesso)
            {
                await CarregarDados();
                FecharFormulario();
            }
            else
            {
                mensagemErro = "Erro ao guardar o produto";
            }
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }

    private async Task ApagarProduto(int id)
    {
        var sucesso = await Api.ApagarProdutoAsync(id);
        if (sucesso)
        {
            await CarregarDados();
        }
    }

    private string GetEstadoBadgeClass(string estado) => estado switch
    {
        "Ativo" => "bg-success",
        "Pendente" => "bg-warning",
        "Inativo" => "bg-secondary",
        _ => "bg-secondary"
    };
}

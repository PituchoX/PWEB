@page "/carrinho"
@inject CarrinhoService CarrinhoService
@inject ApiService Api
@inject NavigationManager Nav
@inject IConfiguration Config

<div class="container py-4">
    <h2 class="mb-4"><i class="bi bi-cart3 me-2"></i>Carrinho de Compras</h2>

    @if (!CarrinhoService.Itens.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">O seu carrinho está vazio</h4>
            <a href="/" class="btn btn-primary mt-3">Continuar a comprar</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in CarrinhoService.Itens)
                {
                    <div class="card mb-3 p-3">
                        <div class="d-flex align-items-center">
                            <img src="@($"{Config["ApiBaseUrl"]}img/{item.ProdutoImagem}")"
                                 alt="@item.ProdutoNome"
                                 style="width: 80px; height: 80px; object-fit: cover;"
                                 class="rounded"
                                 onerror="this.src='/img/noproducts.png'" />

                            <div class="flex-grow-1 ms-3">
                                <h5 class="mb-1">@item.ProdutoNome</h5>
                                <p class="text-muted mb-0">@item.PrecoUnitario.ToString("C2") un.</p>
                            </div>

                            <div class="d-flex align-items-center">
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => CarrinhoService.AtualizarQuantidade(item.ProdutoId, item.Quantidade - 1)">-</button>
                                <span class="mx-2 fw-bold">@item.Quantidade</span>
                                <button class="btn btn-sm btn-outline-secondary" @onclick="() => CarrinhoService.AtualizarQuantidade(item.ProdutoId, item.Quantidade + 1)">+</button>
                            </div>

                            <span class="fw-bold ms-4 text-primary" style="min-width: 80px; text-align: right;">
                                @item.Subtotal.ToString("C2")
                            </span>

                            <button class="btn btn-sm btn-outline-danger ms-3" @onclick="() => CarrinhoService.RemoverItem(item.ProdutoId)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                }

                <button class="btn btn-outline-secondary mt-2" @onclick="CarrinhoService.LimparCarrinho">
                    <i class="bi bi-trash me-2"></i>Limpar Carrinho
                </button>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <i class="bi bi-receipt me-2"></i>Resumo
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@CarrinhoService.TotalItens itens)</span>
                            <span>@CarrinhoService.Total.ToString("C2")</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <strong>Total</strong>
                            <strong class="text-primary fs-4">@CarrinhoService.Total.ToString("C2")</strong>
                        </div>
                    </div>
                    <div class="card-footer">
                        @if (Api.IsAuthenticated)
                        {
                            <button class="btn btn-success w-100 btn-lg" @onclick="IrParaCheckout">
                                <i class="bi bi-credit-card me-2"></i>Finalizar Compra
                            </button>
                        }
                        else
                        {
                            <a href="/login?returnUrl=/carrinho" class="btn btn-warning w-100 btn-lg">
                                <i class="bi bi-person me-2"></i>Entrar para Finalizar
                            </a>
                        }
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body text-center text-muted small">
                        <i class="bi bi-shield-check me-1"></i>
                        Pagamento 100% seguro (simulado)
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private void IrParaCheckout()
    {
        Nav.NavigateTo("/checkout");
    }
}
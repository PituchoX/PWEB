@page "/carrinho"
@inject CarrinhoService CarrinhoService
@inject ApiService Api
@inject NavigationManager Nav

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-cart3 me-2"></i>Carrinho de Compras
    </h2>

    @if (!CarrinhoService.Itens.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">O seu carrinho está vazio</h4>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-arrow-left me-2"></i>Continuar a comprar
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in CarrinhoService.Itens)
                {
                    <div class="carrinho-item">
                        <img src="images/@item.ProdutoImagem" alt="@item.ProdutoNome"
                             onerror="this.src='images/semfoto.png'" />
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-1">@item.ProdutoNome</h5>
                            <p class="text-muted mb-0">@item.PrecoUnitario.ToString("C2") cada</p>
                        </div>
                        <div class="d-flex align-items-center">
                            <div class="input-group" style="width: 130px;">
                                <button class="btn btn-outline-secondary btn-sm" type="button"
                                        @onclick="() => DiminuirQuantidade(item.ProdutoId)">
                                    <i class="bi bi-dash"></i>
                                </button>
                                <span class="input-group-text bg-white px-3">@item.Quantidade</span>
                                <button class="btn btn-outline-secondary btn-sm" type="button"
                                        @onclick="() => AumentarQuantidade(item.ProdutoId)">
                                    <i class="bi bi-plus"></i>
                                </button>
                            </div>
                            <span class="fw-bold ms-4" style="min-width: 80px;">
                                @item.Subtotal.ToString("C2")
                            </span>
                            <button class="btn btn-outline-danger btn-sm ms-3"
                                    @onclick="() => RemoverItem(item.ProdutoId)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                }

                <div class="mt-3">
                    <button class="btn btn-outline-secondary" @onclick="LimparCarrinho">
                        <i class="bi bi-trash me-2"></i>Limpar Carrinho
                    </button>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Resumo da Compra</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal (@CarrinhoService.TotalItens itens)</span>
                            <span>@CarrinhoService.Total.ToString("C2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Portes</span>
                            <span class="text-success">Grátis</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between">
                            <strong>Total</strong>
                            <strong class="text-primary fs-4">@CarrinhoService.Total.ToString("C2")</strong>
                        </div>
                    </div>
                    <div class="card-footer">
                        @if (Api.IsAuthenticated)
                        {
                            <button class="btn btn-success w-100 btn-lg" @onclick="FinalizarCompra" disabled="@processando">
                                @if (processando)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-check-circle me-2"></i>Finalizar Compra
                            </button>
                        }
                        else
                        {
                            <a href="/login?returnUrl=/carrinho" class="btn btn-warning w-100 btn-lg">
                                <i class="bi bi-person me-2"></i>Entrar para Finalizar
                            </a>
                        }
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(mensagemErro))
                {
                    <div class="alert alert-danger mt-3">
                        <i class="bi bi-exclamation-triangle me-2"></i>@mensagemErro
                    </div>
                }

                @if (compraFinalizada)
                {
                    <div class="alert alert-success mt-3">
                        <i class="bi bi-check-circle me-2"></i>Compra realizada com sucesso!
                        <a href="/minhas-compras" class="alert-link">Ver minhas compras</a>
                    </div>
                }
            </div>
        </div>
    }
</div>

@code {
    private bool processando = false;
    private bool compraFinalizada = false;
    private string? mensagemErro;

    private void AumentarQuantidade(int produtoId)
    {
        var item = CarrinhoService.Itens.FirstOrDefault(i => i.ProdutoId == produtoId);
        if (item != null)
        {
            CarrinhoService.AtualizarQuantidade(produtoId, item.Quantidade + 1);
        }
    }

    private void DiminuirQuantidade(int produtoId)
    {
        var item = CarrinhoService.Itens.FirstOrDefault(i => i.ProdutoId == produtoId);
        if (item != null && item.Quantidade > 1)
        {
            CarrinhoService.AtualizarQuantidade(produtoId, item.Quantidade - 1);
        }
    }

    private void RemoverItem(int produtoId)
    {
        CarrinhoService.RemoverItem(produtoId);
    }

    private void LimparCarrinho()
    {
        CarrinhoService.LimparCarrinho();
    }

    private async Task FinalizarCompra()
    {
        processando = true;
        mensagemErro = null;

        try
        {
            var venda = CarrinhoService.GetVendaDto();
            var resultado = await Api.CriarVendaAsync(venda);

            if (resultado != null)
            {
                compraFinalizada = true;
                CarrinhoService.LimparCarrinho();
            }
            else
            {
                mensagemErro = "Erro ao processar a compra. Tente novamente.";
            }
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }
}

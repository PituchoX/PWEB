@page "/minhas-vendas"
@inject ApiService Api
@inject NavigationManager Nav
@inject IConfiguration Config

<PageTitle>Minhas Vendas - MyMEDIA</PageTitle>

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-graph-up me-2"></i>Historico de Vendas
    </h2>

    @if (Api.GetUserInfo()?.Perfil != "Fornecedor")
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Esta pagina e apenas para fornecedores.
        </div>
    }
    else if (!Api.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Precisa de <a href="/login?returnUrl=/minhas-vendas">entrar</a> para ver as suas vendas.
        </div>
    }
    else if (vendas == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else if (!vendas.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-graph-down display-1 text-muted"></i>
            <h4 class="mt-3 text-muted">Ainda nao tem vendas</h4>
            <p class="text-muted">As vendas dos seus produtos aparecerao aqui.</p>
            <a href="/meus-produtos" class="btn btn-primary mt-3">
                <i class="bi bi-box me-2"></i>Ver Meus Produtos
            </a>
        </div>
    }
    else
    {
        <!-- Resumo -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body text-center">
                        <h3>@vendas.Count</h3>
                        <p class="mb-0">Total de Vendas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body text-center">
                        <h3>@vendas.Sum(v => v.Quantidade)</h3>
                        <p class="mb-0">Unidades Vendidas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-warning text-dark">
                    <div class="card-body text-center">
                        <h3>@vendas.Sum(v => v.Total).ToString("C2")</h3>
                        <p class="mb-0">Valor Total</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabela de vendas -->
        <div class="card">
            <div class="card-header">
                <i class="bi bi-list me-2"></i>Lista de Vendas
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Encomenda</th>
                                <th>Data</th>
                                <th>Produto</th>
                                <th class="text-center">Qtd</th>
                                <th class="text-end">Preco Unit.</th>
                                <th class="text-end">Total</th>
                                <th>Cliente</th>
                                <th>Estado</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var venda in vendas)
                            {
                                <tr>
                                    <td><strong>#@venda.VendaId</strong></td>
                                    <td>@venda.Data</td>
                                    <td>@venda.ProdutoNome</td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">@venda.Quantidade</span>
                                    </td>
                                    <td class="text-end">@venda.PrecoUnitario.ToString("C2")</td>
                                    <td class="text-end"><strong>@venda.Total.ToString("C2")</strong></td>
                                    <td>@venda.ClienteNome</td>
                                    <td>
                                        <span class="badge @GetEstadoBadgeClass(venda.Estado)">
                                            @venda.Estado
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="5" class="text-end"><strong>Total Geral:</strong></td>
                                <td class="text-end"><strong class="text-primary fs-5">@vendas.Sum(v => v.Total).ToString("C2")</strong></td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<VendaFornecedorDto>? vendas;

    protected override async Task OnInitializedAsync()
    {
        if (Api.IsAuthenticated && Api.GetUserInfo()?.Perfil == "Fornecedor")
        {
            vendas = await Api.GetMinhasVendasFornecedorAsync();
        }
    }

    private string GetEstadoBadgeClass(string? estado) => estado switch
    {
        "Pendente" => "bg-warning text-dark",
        "Confirmada" => "bg-success",
        "Expedida" => "bg-info",
        "Entregue" => "bg-primary",
        "Rejeitada" => "bg-danger",
        "Cancelada" => "bg-secondary",
        _ => "bg-secondary"
    };
}

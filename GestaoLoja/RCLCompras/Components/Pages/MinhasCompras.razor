@page "/minhas-compras"
@inject ApiService Api
@inject NavigationManager Nav

<PageTitle>Minhas Compras - MyMEDIA</PageTitle>

<div class="container py-3">
    <h4 class="mb-3">
        <i class="bi bi-bag me-2"></i>Minhas Compras
    </h4>

    @if (carregando)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar...</span>
            </div>
        </div>
    }
    else if (!Api.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Precisa de <a href="/login?returnUrl=/minhas-compras">entrar</a> para ver as suas compras.
        </div>
    }
    else if (vendas == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">A carregar compras...</span>
            </div>
        </div>
    }
    else if (!vendas.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-bag-x display-1 text-muted"></i>
            <h5 class="mt-3 text-muted">Ainda não tem compras</h5>
            <a href="/" class="btn btn-primary mt-3">
                <i class="bi bi-cart me-2"></i>Começar a comprar
            </a>
        </div>
    }
    else
    {
        @foreach (var venda in vendas)
        {
            <div class="card mb-3">
                <div class="card-header py-2 d-flex justify-content-between align-items-center">
                    <div>
                        <strong class="small">#@venda.Id</strong>
                        <span class="text-muted small ms-2">@venda.Data</span>
                    </div>
                    <span class="badge @GetEstadoBadgeClass(venda.Estado) small">@GetEstadoLabel(venda.Estado)</span>
                </div>
                <div class="card-body p-2">
                    @if (venda.Linhas != null && venda.Linhas.Any())
                    {
                        @foreach (var linha in venda.Linhas)
                        {
                            <div class="d-flex align-items-center border-bottom py-2">
                                <img src="@Api.GetImageUrl(linha.ProdutoImagem)"
                                     alt="@linha.ProdutoNome"
                                     style="width: 45px; height: 45px; object-fit: cover;"
                                     class="rounded me-2"
                                     onerror="this.src='img/noproductstrans.png'" />
                                <div class="flex-grow-1" style="min-width: 0;">
                                    <p class="mb-0 small text-truncate">@linha.ProdutoNome</p>
                                    <small class="text-muted">
                                        @linha.Quantidade x @linha.PrecoUnitario.ToString("0.00") €
                                    </small>
                                </div>
                                <div class="text-end">
                                    <strong class="text-primary small">@linha.Subtotal.ToString("0.00") €</strong>
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="card-footer py-2 d-flex justify-content-between align-items-center bg-light">
                    <small class="text-muted">
                        @if (venda.Linhas != null)
                        {
                            <span>@venda.Linhas.Sum(l => l.Quantidade) item(s)</span>
                        }
                    </small>
                    <div>
                        <span class="small me-1">Total:</span>
                        <strong class="text-success">@venda.Total.ToString("0.00") €</strong>
                    </div>
                </div>
            </div>
        }
    }
</div>

@code {
    private List<VendaDto>? vendas;
    private bool carregando = true;

    protected override async Task OnInitializedAsync()
    {
        // Aguardar que a API inicialize (restaurar sessão do localStorage)
        await Api.InitializeAsync();
        carregando = false;
        
        if (Api.IsAuthenticated)
        {
            vendas = await Api.GetMinhasVendasAsync();
        }
    }

    private string GetEstadoBadgeClass(string estado) => estado switch
    {
        "Pendente" => "bg-warning text-dark",
        "Confirmada" => "bg-success",
        "Expedida" => "bg-info",
        "Entregue" => "bg-primary",
        "Rejeitada" => "bg-danger",
        "Cancelada" => "bg-secondary",
        _ => "bg-secondary"
    };

    private string GetEstadoLabel(string estado) => estado switch
    {
        "Pendente" => "Aguarda Confirmação",
        "Confirmada" => "Confirmada",
        "Expedida" => "Expedida",
        "Entregue" => "Entregue",
        "Rejeitada" => "Rejeitada",
        "Cancelada" => "Cancelada",
        _ => estado
    };
}

@page "/checkout"
@inject CarrinhoService CarrinhoService
@inject ApiService Api
@inject NavigationManager Nav

<PageTitle>Checkout - MyMEDIA</PageTitle>

<div class="container py-3">
    <h4 class="mb-3"><i class="bi bi-credit-card me-2"></i>Finalizar Compra</h4>

    @if (!Api.IsAuthenticated)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            Precisa de <a href="/login?returnUrl=/checkout">entrar</a> para finalizar a compra.
        </div>
    }
    else if (!CarrinhoService.Itens.Any() && !compraFinalizada)
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h5 class="mt-3 text-muted">O seu carrinho está vazio</h5>
            <a href="/" class="btn btn-primary mt-3">Continuar a comprar</a>
        </div>
    }
    else if (compraFinalizada)
    {
        <div class="card">
            <div class="card-body text-center py-4">
                <i class="bi bi-check-circle-fill text-success display-3"></i>
                <h5 class="mt-3 text-success">Encomenda Registada!</h5>
                <p class="text-muted">A sua encomenda aguarda confirmação.</p>
                
                <div class="alert alert-light border mt-3 text-start">
                    <p class="mb-1"><strong>Encomenda #@vendaId</strong></p>
                    <p class="mb-1">Método: @metodoPagamento</p>
                    <p class="mb-1">Entrega: @moradaEntrega, @codigoPostal @localidade</p>
                    <p class="mb-0">Total: <strong class="text-success">@totalPago.ToString("0.00") €</strong></p>
                </div>

                <p class="text-muted mt-3 small">
                    <i class="bi bi-arrow-right me-1"></i>
                    A redirecionar para as suas compras...
                </p>
            </div>
        </div>
    }
    else
    {
        <!-- Resumo do Pedido -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white py-2">
                <i class="bi bi-bag me-2"></i>Resumo do Pedido
            </div>
            <div class="card-body p-2">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Produto</th>
                            <th class="text-center">Qtd</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in CarrinhoService.Itens)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="@Api.GetImageUrl(item.ProdutoImagem)"
                                             alt="@item.ProdutoNome"
                                             style="width: 35px; height: 35px; object-fit: cover;"
                                             class="me-2 rounded"
                                             onerror="this.src='img/noproductstrans.png'" />
                                        <small class="text-truncate" style="max-width: 120px;">@item.ProdutoNome</small>
                                    </div>
                                </td>
                                <td class="text-center">@item.Quantidade</td>
                                <td class="text-end fw-bold">@item.Subtotal.ToString("0.00") €</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-light">
                            <td colspan="2" class="text-end fw-bold">Total:</td>
                            <td class="text-end fw-bold text-primary">@CarrinhoService.Total.ToString("0.00") €</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>

        <!-- Dados de Entrega -->
        <div class="card mb-3">
            <div class="card-header bg-info text-white py-2">
                <i class="bi bi-truck me-2"></i>Dados de Entrega
            </div>
            <div class="card-body p-2">
                <div class="row g-2">
                    <div class="col-6">
                        <label class="form-label small mb-1">Nome <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" @bind="nomeEntrega" placeholder="Nome" />
                    </div>
                    <div class="col-6">
                        <label class="form-label small mb-1">Telemóvel <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" @bind="telefoneEntrega" placeholder="912345678" />
                    </div>
                </div>
                
                <div class="mt-2">
                    <label class="form-label small mb-1">Morada <span class="text-danger">*</span></label>
                    <input type="text" class="form-control form-control-sm" @bind="moradaEntrega" placeholder="Rua, número" />
                </div>
                
                <div class="row g-2 mt-1">
                    <div class="col-4">
                        <label class="form-label small mb-1">Código Postal <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" @bind="codigoPostal" placeholder="0000-000" />
                    </div>
                    <div class="col-8">
                        <label class="form-label small mb-1">Localidade <span class="text-danger">*</span></label>
                        <input type="text" class="form-control form-control-sm" @bind="localidade" placeholder="Cidade" />
                    </div>
                </div>
            </div>
        </div>

        <!-- Pagamento -->
        <div class="card mb-3">
            <div class="card-header bg-success text-white py-2">
                <i class="bi bi-credit-card me-2"></i>Pagamento
            </div>
            <div class="card-body p-2">
                <div class="mb-2">
                    <label class="form-label small mb-1">Método de Pagamento</label>
                    <select class="form-select form-select-sm" @bind="metodoPagamento">
                        <option value="Cartao">Cartão de Crédito/Débito</option>
                        <option value="MB WAY">MB WAY</option>
                        <option value="Multibanco">Multibanco (Referência)</option>
                    </select>
                </div>

                <!-- Campos para Cartão -->
                @if (metodoPagamento == "Cartao")
                {
                    <div class="border rounded p-2 bg-light mb-2">
                        <div class="mb-2">
                            <label class="form-label small mb-1">Número do Cartão <span class="text-danger">*</span></label>
                            <input type="text" class="form-control form-control-sm" 
                                   placeholder="0000 0000 0000 0000" 
                                   @bind="numeroCartao" 
                                   maxlength="19" />
                        </div>
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="form-label small mb-1">Validade <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" 
                                       placeholder="MM/AA" 
                                       @bind="validadeCartao" 
                                       maxlength="5" />
                            </div>
                            <div class="col-6">
                                <label class="form-label small mb-1">CVV <span class="text-danger">*</span></label>
                                <input type="text" class="form-control form-control-sm" 
                                       placeholder="123" 
                                       @bind="cvvCartao" 
                                       maxlength="4" />
                            </div>
                        </div>
                        <div class="mt-2">
                            <label class="form-label small mb-1">Nome no Cartão <span class="text-danger">*</span></label>
                            <input type="text" class="form-control form-control-sm" 
                                   placeholder="NOME COMPLETO" 
                                   @bind="nomeCartao" />
                        </div>
                    </div>
                }

                <!-- Campos para MB WAY -->
                @if (metodoPagamento == "MB WAY")
                {
                    <div class="border rounded p-2 bg-light mb-2">
                        <label class="form-label small mb-1">Telemóvel MB WAY <span class="text-danger">*</span></label>
                        <div class="input-group input-group-sm">
                            <span class="input-group-text">+351</span>
                            <input type="text" class="form-control" 
                                   placeholder="912345678" 
                                   @bind="numeroTelemovel" 
                                   maxlength="9" />
                        </div>
                        <small class="text-muted">Receberá uma notificação na app MB WAY</small>
                    </div>
                }

                <!-- Campos para Multibanco -->
                @if (metodoPagamento == "Multibanco")
                {
                    <div class="border rounded p-2 bg-light mb-2">
                        <div class="text-center">
                            <i class="bi bi-bank fs-3 text-primary mb-2"></i>
                            <p class="small mb-2">Após confirmar, receberá os dados para pagamento:</p>
                            <div class="bg-white rounded p-2 border">
                                <div class="row text-start small">
                                    <div class="col-4 text-muted">Entidade:</div>
                                    <div class="col-8 fw-bold">21XXX</div>
                                </div>
                                <div class="row text-start small">
                                    <div class="col-4 text-muted">Referência:</div>
                                    <div class="col-8 fw-bold">XXX XXX XXX</div>
                                </div>
                                <div class="row text-start small">
                                    <div class="col-4 text-muted">Montante:</div>
                                    <div class="col-8 fw-bold text-success">@CarrinhoService.Total.ToString("0.00") €</div>
                                </div>
                            </div>
                            <small class="text-muted mt-2 d-block">
                                <i class="bi bi-info-circle me-1"></i>
                                Válido por 72 horas
                            </small>
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(mensagemErro))
                {
                    <div class="alert alert-danger py-1 small">@mensagemErro</div>
                }

                <hr class="my-2" />

                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span>Total a Pagar:</span>
                    <span class="fs-5 fw-bold text-success">@CarrinhoService.Total.ToString("0.00") €</span>
                </div>

                <button class="btn btn-success w-100" @onclick="ProcessarPagamento" disabled="@processando">
                    @if (processando)
                    {
                        <span class="spinner-border spinner-border-sm me-2"></span>
                        <span>A processar...</span>
                    }
                    else
                    {
                        <i class="bi bi-lock me-2"></i>
                        <span>Confirmar Encomenda</span>
                    }
                </button>

                <div class="text-center mt-2">
                    <small class="text-muted">
                        <i class="bi bi-shield-check me-1"></i>Pagamento seguro (simulado)
                    </small>
                </div>
            </div>
        </div>

        <a href="/carrinho" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Voltar ao Carrinho
        </a>
    }
</div>

@code {
    // Dados de Entrega
    private string nomeEntrega = "";
    private string telefoneEntrega = "";
    private string moradaEntrega = "";
    private string codigoPostal = "";
    private string localidade = "";

    // Pagamento
    private string metodoPagamento = "Cartao";
    
    // Campos Cartão
    private string numeroCartao = "";
    private string validadeCartao = "";
    private string cvvCartao = "";
    private string nomeCartao = "";
    
    // Campo MB WAY
    private string numeroTelemovel = "";
    
    private bool processando = false;
    private bool compraFinalizada = false;
    private string? mensagemErro;
    
    private int vendaId;
    private decimal totalPago;

    protected override void OnInitialized()
    {
        if (Api.IsAuthenticated)
        {
            nomeEntrega = Api.GetUserInfo()?.NomeCompleto ?? "";
            nomeCartao = nomeEntrega.ToUpper();
        }
    }

    private async Task ProcessarPagamento()
    {
        processando = true;
        mensagemErro = null;

        try
        {
            // Validar dados de entrega
            if (string.IsNullOrWhiteSpace(nomeEntrega))
            {
                mensagemErro = "Introduza o nome.";
                processando = false;
                return;
            }
            if (string.IsNullOrWhiteSpace(moradaEntrega))
            {
                mensagemErro = "Introduza a morada.";
                processando = false;
                return;
            }
            if (string.IsNullOrWhiteSpace(codigoPostal))
            {
                mensagemErro = "Introduza o código postal.";
                processando = false;
                return;
            }
            if (string.IsNullOrWhiteSpace(localidade))
            {
                mensagemErro = "Introduza a localidade.";
                processando = false;
                return;
            }
            if (string.IsNullOrWhiteSpace(telefoneEntrega))
            {
                mensagemErro = "Introduza o telemóvel.";
                processando = false;
                return;
            }

            // Validar pagamento por método
            if (metodoPagamento == "Cartao")
            {
                if (string.IsNullOrWhiteSpace(numeroCartao) || numeroCartao.Replace(" ", "").Length < 13)
                {
                    mensagemErro = "Introduza um número de cartão válido.";
                    processando = false;
                    return;
                }
                if (string.IsNullOrWhiteSpace(validadeCartao) || validadeCartao.Length < 5)
                {
                    mensagemErro = "Introduza a validade do cartão (MM/AA).";
                    processando = false;
                    return;
                }
                if (string.IsNullOrWhiteSpace(cvvCartao) || cvvCartao.Length < 3)
                {
                    mensagemErro = "Introduza o CVV do cartão.";
                    processando = false;
                    return;
                }
                if (string.IsNullOrWhiteSpace(nomeCartao))
                {
                    mensagemErro = "Introduza o nome no cartão.";
                    processando = false;
                    return;
                }
            }
            else if (metodoPagamento == "MB WAY")
            {
                if (string.IsNullOrWhiteSpace(numeroTelemovel) || numeroTelemovel.Length < 9)
                {
                    mensagemErro = "Introduza o telemóvel para MB WAY.";
                    processando = false;
                    return;
                }
            }
            // Multibanco não precisa de validação adicional

            if (!Api.IsAuthenticated)
            {
                mensagemErro = "Sessão expirada. Faça login novamente.";
                processando = false;
                return;
            }

            var perfil = Api.GetUserInfo()?.Perfil;
            if (perfil != "Cliente")
            {
                mensagemErro = $"Apenas Clientes podem comprar. Perfil: {perfil}";
                processando = false;
                return;
            }

            // Simular processamento
            await Task.Delay(1500);

            var venda = CarrinhoService.GetVendaDto();
            
            if (!venda.Linhas.Any())
            {
                mensagemErro = "O carrinho está vazio.";
                processando = false;
                return;
            }

            var (resultado, erro) = await Api.CriarVendaAsync(venda);

            if (resultado != null)
            {
                vendaId = resultado.Id;
                totalPago = CarrinhoService.Total;
                
                await Api.SimularPagamentoAsync(vendaId);
                
                CarrinhoService.LimparCarrinho();
                compraFinalizada = true;
                
                await Task.Delay(2000);
                Nav.NavigateTo("/minhas-compras");
            }
            else
            {
                mensagemErro = erro ?? "Erro ao processar. Tente novamente.";
            }
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro: {ex.Message}";
        }
        finally
        {
            processando = false;
        }
    }
}

@page "/carrinho"
@inject CarrinhoService CarrinhoService
@inject ApiService Api
@inject NavigationManager Nav

<PageTitle>Carrinho - MyMEDIA</PageTitle>

<div class="container py-3">
    <h4 class="mb-3"><i class="bi bi-cart3 me-2"></i>Carrinho de Compras</h4>

    @if (!CarrinhoService.Itens.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x display-1 text-muted"></i>
            <h5 class="mt-3 text-muted">O seu carrinho está vazio</h5>
            <a href="/" class="btn btn-primary mt-3">Continuar a comprar</a>
        </div>
    }
    else
    {
        <!-- Lista de Itens -->
        <div class="mb-3">
            @foreach (var item in CarrinhoService.Itens)
            {
                <div class="card mb-2">
                    <div class="card-body p-2">
                        <div class="d-flex align-items-center">
                            <img src="@Api.GetImageUrl(item.ProdutoImagem)"
                                 alt="@item.ProdutoNome"
                                 style="width: 60px; height: 60px; object-fit: cover;"
                                 class="rounded"
                                 onerror="this.src='img/noproductstrans.png'" />

                            <div class="flex-grow-1 ms-2" style="min-width: 0;">
                                <h6 class="mb-0 text-truncate" style="font-size: 0.85rem;">@item.ProdutoNome</h6>
                                <small class="text-muted">@item.PrecoUnitario.ToString("0.00") € un.</small>
                            </div>

                            <div class="d-flex align-items-center ms-2">
                                <button class="btn btn-sm btn-outline-secondary px-2 py-0" 
                                        @onclick="() => CarrinhoService.AtualizarQuantidade(item.ProdutoId, item.Quantidade - 1)">
                                    -
                                </button>
                                <span class="mx-2 fw-bold" style="min-width: 20px; text-align: center;">@item.Quantidade</span>
                                <button class="btn btn-sm btn-outline-secondary px-2 py-0" 
                                        @onclick="() => CarrinhoService.AtualizarQuantidade(item.ProdutoId, item.Quantidade + 1)">
                                    +
                                </button>
                            </div>

                            <div class="ms-2 text-end" style="min-width: 65px;">
                                <span class="fw-bold text-primary" style="font-size: 0.9rem;">
                                    @item.Subtotal.ToString("0.00") €
                                </span>
                            </div>

                            <button class="btn btn-sm btn-link text-danger ms-1 p-0" 
                                    @onclick="() => CarrinhoService.RemoverItem(item.ProdutoId)">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }

            <button class="btn btn-outline-secondary btn-sm mt-2" @onclick="CarrinhoService.LimparCarrinho">
                <i class="bi bi-trash me-1"></i>Limpar Carrinho
            </button>
        </div>

        <!-- Resumo -->
        <div class="card">
            <div class="card-header bg-primary text-white py-2">
                <i class="bi bi-receipt me-2"></i>Resumo
            </div>
            <div class="card-body py-2">
                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal (@CarrinhoService.TotalItens itens)</span>
                    <span>@CarrinhoService.Total.ToString("0.00") €</span>
                </div>
                <hr class="my-2" />
                <div class="d-flex justify-content-between align-items-center">
                    <strong>Total</strong>
                    <strong class="text-success fs-5">@CarrinhoService.Total.ToString("0.00") €</strong>
                </div>
            </div>
            <div class="card-footer py-2">
                @if (Api.IsAuthenticated)
                {
                    <button class="btn btn-success w-100" @onclick="IrParaCheckout">
                        <i class="bi bi-credit-card me-2"></i>Finalizar Compra
                    </button>
                }
                else
                {
                    <a href="/login?returnUrl=/carrinho" class="btn btn-warning w-100">
                        <i class="bi bi-person me-2"></i>Entrar para Finalizar
                    </a>
                }
            </div>
        </div>
    }
</div>

@code {
    private void IrParaCheckout()
    {
        Nav.NavigateTo("/checkout");
    }
}

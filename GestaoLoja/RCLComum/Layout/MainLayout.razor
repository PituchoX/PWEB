@inherits LayoutComponentBase
@implements IDisposable
@inject CarrinhoService Carrinho
@inject ApiService Api
@inject NavigationManager Nav

<!-- HEADER -->
<div class="header-top">
    <div class="container-fluid d-flex justify-content-between align-items-center py-2 px-3">
        <!-- Logo -->
        <a class="navbar-brand text-white fw-bold fs-4" href="/" style="text-decoration: none;">
            <i class="bi bi-disc me-2"></i>MyMEDIA
        </a>

        <!-- Barra de pesquisa -->
        <div class="search-bar d-none d-md-flex flex-grow-1 mx-4">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Pesquisar produtos..." 
                       @bind="termoPesquisa" @bind:event="oninput" @onkeypress="OnKeyPress" />
                <button class="btn btn-warning" type="button" @onclick="Pesquisar">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        <!-- Barra de pesquisa mobile -->
        <div class="d-md-none flex-grow-1 mx-2">
            <div class="input-group input-group-sm">
                <input type="text" class="form-control" placeholder="Pesquisar..." 
                       @bind="termoPesquisa" @bind:event="oninput" @onkeypress="OnKeyPress" />
                <button class="btn btn-warning" type="button" @onclick="Pesquisar">
                    <i class="bi bi-search"></i>
                </button>
            </div>
        </div>

        <!-- Ações do utilizador -->
        <div class="user-actions d-flex align-items-center gap-2">
            @if (Api.IsAuthenticated)
            {
                <div class="dropdown">
                    <button class="btn btn-link text-white text-decoration-none dropdown-toggle p-1" type="button">
                        <i class="bi bi-person-circle me-1"></i>
                        <span class="d-none d-sm-inline">@GetShortName()</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li class="dropdown-header">
                            <strong>@Api.GetUserInfo()?.NomeCompleto</strong><br/>
                            <small class="text-muted">@Api.GetUserInfo()?.Perfil</small>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        @if (Api.GetUserInfo()?.Perfil == "Cliente")
                        {
                            <li><a class="dropdown-item" href="/minhas-compras"><i class="bi bi-bag me-2"></i>Minhas Compras</a></li>
                        }
                        @if (Api.GetUserInfo()?.Perfil == "Fornecedor")
                        {
                            <li><a class="dropdown-item" href="/meus-produtos"><i class="bi bi-box me-2"></i>Meus Produtos</a></li>
                            <li><a class="dropdown-item" href="/minhas-vendas"><i class="bi bi-graph-up me-2"></i>Minhas Vendas</a></li>
                        }
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item text-danger" href="#" @onclick="Logout" @onclick:preventDefault><i class="bi bi-box-arrow-right me-2"></i>Sair</a></li>
                    </ul>
                </div>
            }
            else
            {
                <a href="/login" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-person me-1"></i><span class="d-none d-sm-inline">Entrar</span>
                </a>
                <a href="/registar" class="btn btn-warning btn-sm">
                    <i class="bi bi-person-plus me-1"></i><span class="d-none d-sm-inline">Registar</span>
                </a>
            }

            <!-- Carrinho -->
            <a href="/carrinho" class="btn btn-outline-light btn-sm position-relative">
                <i class="bi bi-cart3"></i>
                @if (Carrinho.TotalItens > 0)
                {
                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size: 0.6rem;">
                        @Carrinho.TotalItens
                    </span>
                }
            </a>
        </div>
    </div>
</div>

<!-- CONTEÚDO PRINCIPAL -->
<div class="main-content">
    @Body
</div>

<!-- FOOTER -->
<footer class="footer-bottom py-3">
    <div class="container text-center">
        <small class="text-white-50">© 2025 MyMEDIA - Programação Web - ISEC</small>
    </div>
</footer>

<div id="blazor-error-ui">
    Ocorreu um erro inesperado.
    <a href="" class="reload">Recarregar</a>
    <a class="dismiss">X</a>
</div>

@code {
    private bool initialized = false;
    private string termoPesquisa = "";

    protected override async Task OnInitializedAsync()
    {
        Carrinho.OnChange += OnStateChanged;
        Api.OnAuthStateChanged += OnStateChanged;
        
        if (!initialized)
        {
            initialized = true;
            await Api.InitializeAsync();
        }
    }

    private void OnStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private string GetShortName()
    {
        var nome = Api.GetUserInfo()?.NomeCompleto ?? "";
        if (string.IsNullOrEmpty(nome)) return "User";
        var partes = nome.Split(' ');
        return partes[0];
    }

    private void Pesquisar()
    {
        if (!string.IsNullOrWhiteSpace(termoPesquisa))
        {
            Nav.NavigateTo($"/pesquisa?q={Uri.EscapeDataString(termoPesquisa)}");
            termoPesquisa = "";
        }
    }

    private void OnKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            Pesquisar();
        }
    }

    private void Logout()
    {
        Api.Logout();
        Carrinho.LimparCarrinho();
        Nav.NavigateTo("/");
    }

    public void Dispose()
    {
        Carrinho.OnChange -= OnStateChanged;
        Api.OnAuthStateChanged -= OnStateChanged;
    }
}
